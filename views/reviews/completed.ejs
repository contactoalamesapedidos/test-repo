<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h4 class="mb-2">Reseña Completada</h4>
                    <p class="text-muted mb-3">Ya has dejado una reseña para este pedido</p>
                    <a href="/orders" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Volver a Mis Pedidos
                    </a>
                </div>
            </div>

            <!-- Review Details -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="mb-0">
                        <i class="fas fa-star me-2"></i>
                        Tu Reseña
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Calificación</h6>
                            <div class="rating-display mb-3">
                                <% for (let i = 1; i <= 5; i++) { %>
                                    <i class="fas fa-star <%= i <= review.calificacion_restaurante ? 'text-warning' : 'text-muted' %>"></i>
                                <% } %>
                                <span class="ms-2 text-muted">(<%= review.calificacion_restaurante %>/5)</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6>Fecha de Reseña</h6>
                            <p class="text-muted">
                                <%= new Date(review.fecha_resena).toLocaleDateString() %>
                            </p>
                        </div>
                    </div>
                    
                    <% if (review.comentario_restaurante) { %>
                        <div class="mt-3">
                            <h6>Tu Comentario</h6>
                            <div class="p-3 bg-light rounded">
                                <p class="mb-0"><%= review.comentario_restaurante %></p>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>


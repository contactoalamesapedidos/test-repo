<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Error</h3>
                </div>
                <div class="card-body p-4">
                    <% var errorObj = typeof error !== 'undefined' ? error : null; %>
                    <h5 class="card-title text-muted mb-3"><%= message || 'Ha ocurrido un error inesperado.' %></h5>
                    <p class="card-text">Por favor, intenta de nuevo. Si el problema persiste, contacta al soporte.</p>
                    <% if (errorObj && errorObj.stack) { %>
                        <div class="alert alert-light text-start" role="alert">
                            <h6 class="alert-heading">Detalles del Error:</h6>
                            <pre class="mb-0"><code class="text-danger"><%= errorObj.stack %></code></pre>
                        </div>
                    <% } %>
                    <a href="/" class="btn btn-primary mt-3">
                        <i class="fas fa-home me-2"></i>
                        Volver al Inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
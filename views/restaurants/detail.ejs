<%- include('../partials/header') %>

<div class="restaurant-detail">
    <!-- Restaurant Header -->
    <div class="restaurant-header bg-light">
        <div class="container">
            <div class="row align-items-center py-4">
                <div class="col-md-3">
                    <img src="<%= restaurant.imagen_logo %>" 
                         alt="<%= restaurant.nombre %>" 
                         class="restaurant-logo img-fluid rounded shadow">
                </div>
                <div class="col-md-6">
                    <h1 class="restaurant-name mb-2"><%= restaurant.nombre %></h1>
                    <p class="restaurant-description text-muted mb-3"><%= restaurant.descripcion %></p>
                    
                    <div class="restaurant-info d-flex flex-wrap gap-3">
                        <div class="info-item">
                            <i class="fas fa-star text-warning"></i>
                            <span><%= restaurant.calificacion_promedio || 0 %>/5</span>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-clock text-primary"></i>
                            <span><%= restaurant.tiempo_entrega_min || 30 %>-<%= restaurant.tiempo_entrega_max || 45 %> min</span>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-shipping-fast text-success"></i>
                            <span>Envío $<%= restaurant.costo_delivery || 0 %></span>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-map-marker-alt text-danger"></i>
                            <span><%= restaurant.direccion %></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 text-end">
                    <div class="restaurant-status mb-3">
                        <% if (restaurant.abierto) { %>
                            <span class="badge bg-success fs-6">
                                <i class="fas fa-check-circle"></i> Abierto
                            </span>
                        <% } else { %>
                            <span class="badge bg-danger fs-6">
                                <i class="fas fa-times-circle"></i> Cerrado
                            </span>
                        <% } %>
                    </div>
                    <div class="restaurant-hours">
                        <small class="text-muted">
                            Horarios: <%= restaurant.horario_apertura %> - <%= restaurant.horario_cierre %>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="row">
            <!-- Menu Categories Sidebar -->
            <div class="col-lg-3">
                <div class="menu-categories sticky-top">
                    <h5 class="mb-3">Categorías</h5>
                    <div class="list-group">
                        <% categories.forEach(category => { %>
                            <a href="#category-<%= category.id %>" 
                               class="list-group-item list-group-item-action">
                                <%= category.nombre %>
                                <span class="badge bg-primary rounded-pill ms-auto">
                                    <%= category.productos_count %>
                                </span>
                            </a>
                        <% }) %>
                    </div>

                    <!-- Cart Summary -->
                    <div class="cart-summary mt-4 d-none" id="cartSummary">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <h6 class="mb-0">
                                    <i class="fas fa-shopping-cart"></i>
                                    Tu Pedido
                                </h6>
                            </div>
                            <div class="card-body">
                                <div id="cartItems"></div>
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <strong>Total: $<span id="cartTotal">0</span></strong>
                                </div>
                                <a href="/cart" class="btn btn-primary w-100 mt-2">
                                    <i class="fas fa-shopping-cart"></i>
                                    Ver Carrito
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Menu Items -->
            <div class="col-lg-9">
                <!-- Search Bar -->
                <div class="menu-search mb-4">
                    <div class="input-group">
                        <input type="text" class="form-control" 
                               placeholder="Buscar productos..." 
                               id="productSearch">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                    </div>
                </div>

                <!-- Products by Category -->
                <% categories.forEach(category => { %>
                    <div class="menu-category mb-5" id="category-<%= category.id %>">
                        <h3 class="category-title mb-3">
                            <i class="fas fa-utensils text-primary"></i>
                            <%= category.nombre %>
                        </h3>
                        
                        <div class="row">
                            <% productsByCategory[category.nombre].forEach(product => { %>
                                <div class="col-md-6 mb-3 product-item" 
                                     data-name="<%= product.nombre.toLowerCase() %>" 
                                     data-description="<%= product.descripcion.toLowerCase() %>">
                                    <div class="card h-100 product-card">
                                        <div class="row g-0 h-100">
                                            <div class="col-4">
                                                <img src="/uploads/<%= product.imagen %>" 
                                                     class="product-image img-fluid rounded-start h-100 object-cover" 
                                                     alt="<%= product.nombre %>"
                                                     onerror="this.src='/images/no-image.png'">
                                            </div>
                                            <div class="col-8">
                                                <div class="card-body d-flex flex-column h-100">
                                                    <h6 class="card-title">
                                                        <%= product.nombre %>
                                                        <% if (product.destacado) { %>
                                                            <span class="badge bg-warning ms-1">⭐</span>
                                                        <% } %>
                                                    </h6>
                                                    <p class="card-text text-muted small flex-grow-1">
                                                        <%= product.descripcion %>
                                                    </p>
                                                    
                                                    <div class="product-footer mt-auto">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div class="price">
                                                                <% if (product.precio_descuento && product.precio_descuento < product.precio) { %>
                                                                    <span class="text-muted text-decoration-line-through small">
                                                                        $<%= product.precio %>
                                                                    </span>
                                                                    <strong class="text-primary">
                                                                        $<%= product.precio_descuento %>
                                                                    </strong>
                                                                <% } else { %>
                                                                    <strong class="text-primary">
                                                                        $<%= product.precio %>
                                                                    </strong>
                                                                <% } %>
                                                            </div>
                                                            
                                                            <button class="btn btn-sm btn-primary add-to-cart-btn"
                                                                    data-product-id="<%= product.id %>"
                                                                    data-product-name="<%= product.nombre %>"
                                                                    data-product-price="<%= product.precio_descuento || product.precio %>"
                                                                    data-restaurant-id="<%= restaurant.id %>">
                                                                <i class="fas fa-plus"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                <% }) %>

                <!-- Reviews Section -->
                <div class="reviews-section mt-5">
                    <h3 class="mb-4">
                        <i class="fas fa-star text-warning"></i>
                        Reseñas de Clientes
                    </h3>
                    
                    <% if (reviews.length > 0) { %>
                        <div class="row">
                            <% reviews.forEach(review => { %>
                                <div class="col-md-6 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-2">
                                                <img src="<%= review.imagen_perfil %>" 
                                                     alt="<%= review.nombre %>" 
                                                     class="user-image rounded-circle me-2" 
                                                     width="40" height="40">
                                                <div>
                                                    <h6 class="mb-0"><%= review.nombre %> <%= review.apellido %></h6>
                                                    <div class="rating">
                                                        <% for (let i = 1; i <= 5; i++) { %>
                                                            <i class="fas fa-star <%= i <= review.calificacion ? 'text-warning' : 'text-muted' %>"></i>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                            <p class="card-text"><%= review.comentario %></p>
                                            <small class="text-muted">
                                                <%= new Date(review.fecha_calificacion).toLocaleDateString('es-AR') %>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="fas fa-star fa-3x text-muted mb-3"></i>
                            <h5>Aún no hay reseñas</h5>
                            <p class="text-muted">Sé el primero en calificar este restaurante</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add to Cart Modal -->
<div class="modal fade" id="addToCartModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar al Carrito</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <img id="modalProductImage" src="" alt="" class="img-fluid mb-3" style="max-height: 200px;">
                    <h5 id="modalProductName"></h5>
                    <p id="modalProductDescription" class="text-muted"></p>
                    
                    <div class="quantity-selector mb-3">
                        <label class="form-label">Cantidad:</label>
                        <div class="input-group justify-content-center">
                            <button class="btn btn-outline-secondary" type="button" id="decreaseQty">-</button>
                            <input type="number" class="form-control text-center" id="productQuantity" 
                                   value="1" min="1" style="max-width: 80px;">
                            <button class="btn btn-outline-secondary" type="button" id="increaseQty">+</button>
                        </div>
                    </div>
                    
                    <div class="price-display">
                        <h4 class="text-primary">$<span id="totalPrice">0</span></h4>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="confirmAddToCart">
                    <i class="fas fa-shopping-cart"></i>
                    Agregar al Carrito
                </button>
            </div>
        </div>
    </div>
</div>

<style>
.restaurant-logo {
    max-height: 120px;
    object-fit: cover;
}

.restaurant-info .info-item {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 0.9rem;
}

.menu-categories {
    top: 20px;
}

.product-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    border: none;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.product-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.15);
}

.object-cover {
    object-fit: cover;
}

.category-title {
    border-bottom: 2px solid #007bff;
    padding-bottom: 10px;
}

.cart-summary {
    z-index: 1000;
}

.add-to-cart-btn {
    border-radius: 50%;
    width: 35px;
    height: 35px;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.quantity-selector input {
    border-left: none;
    border-right: none;
}
</style>


    top: 20px;
    z-index: 900;
}

.product-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    border: none;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.product-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.15);
}

.object-cover {
    object-fit: cover;
}

.category-title {
    border-bottom: 2px solid #007bff;
    padding-bottom: 10px;
}

.cart-summary {
    z-index: 1000;
}

.add-to-cart-btn {
    border-radius: 50%;
    width: 35px;
    height: 35px;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.quantity-selector input {
    border-left: none;
    border-right: none;
}
</style>


<%
    // Helper simple para imágenes
    function getImageUrl(img, fallback) {
      return img ? '/uploads/' + img : fallback;
    }
%>
<div class="container mt-4">
    <% if (restaurant.cerrado_admin) { %>
        <div class="alert alert-danger text-center fw-bold my-4">
            Este restaurante está cerrado temporalmente por el administrador. No es posible realizar pedidos en este momento.
        </div>
    <% } %>
    <!-- Restaurant Banner -->
    <div class="restaurant-banner mb-4 position-relative">
        <img src="<%= restaurant.imagen_banner ? getImageUrl(restaurant.imagen_banner, '/images/defaults/restaurant-banner-default.jpg') : (restaurant.imagen_logo ? getImageUrl(restaurant.imagen_logo, '/images/defaults/restaurant-banner-default.jpg') : '/images/defaults/restaurant-banner-default.jpg') %>"
             alt="Banner de <%= restaurant.nombre %>"
             class="img-fluid rounded"
             style="width: 100%; height: 300px; object-fit: cover;"
             onerror="this.onerror=null;this.src='/images/defaults/restaurant-banner-default.jpg';">
        <div class="banner-overlay position-absolute bottom-0 start-0 w-100 p-3 text-white" style="background: rgba(0, 0, 0, 0.5);">
            <h3 class="mb-0"><%= restaurant.nombre %></h3>
            <% if (restaurant.descripcion) { %>
                <p class="mb-0 small"><%= restaurant.descripcion.substring(0, 100) %>...</p>
            <% } %>
            <% if (restaurant.direccion) { %>
                <small><i class="fas fa-map-marker-alt me-1"></i><%= restaurant.direccion %></small>
            <% } %>
        </div>
    </div>
    <div class="row">
            <!-- Menu Categories Sidebar -->
            <div class="col-lg-3">
                <div class="menu-categories sticky-top">
                    <h5 class="mb-3">Categorías</h5>
                    <div class="list-group">
                        <% Object.keys(productsByCategory).forEach(categoryName => { %>
                            <% if (productsByCategory[categoryName].length > 0) { %>
                                <a href="#category-<%= categoryName.replace(/\s+/g, '-').toLowerCase() %>" 
                                   class="list-group-item list-group-item-action">
                                    <%= categoryName %>
                                    <span class="badge rounded-pill ms-auto" style="background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%); color: white;">
                                        <%= productsByCategory[categoryName].length %>
                                    </span>
                                </a>
                            <% } %>
                        <% }) %>
                    </div>
                </div>
            </div>

            <!-- Menu Items -->
            <div class="col-lg-9">
                <!-- Search Bar -->
                <div class="menu-search mb-4">
                    <div class="input-group">
                        <input type="text" class="form-control" 
                               placeholder="Buscar productos..." 
                               id="productSearch">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                    </div>
                </div>

                <!-- Products by Category -->
                <% Object.keys(productsByCategory).forEach(categoryName => { %>
                    <% if (productsByCategory[categoryName].length > 0) { %>
                        <div class="menu-category mb-5" id="category-<%= categoryName.replace(/\s+/g, '-').toLowerCase() %>">
                            <h3 class="category-title mb-3">
                                <i class="fas fa-utensils" style="color: #ff6b35;"></i>
                                <%= categoryName %>
                            </h3>
                            
                            <div class="row">
                                <% productsByCategory[categoryName].forEach(product => { %>
                                    <div class="col-md-6 mb-3 product-item" 
                                         data-product-id="<%= product.id %>"
                                         data-name="<%= product.nombre.toLowerCase() %>" 
                                         data-description="<%= product.descripcion.toLowerCase() %>"
                                         style="<%= product.visible === false ? 'display:none;' : '' %>">
                                        <div class="card h-100 product-card">
                                            <div class="row g-0 h-100">
                                                <div class="col-5">
                                                    <img src="<%= product.imagen ? getImageUrl(product.imagen, '/images/defaults/product.jpeg') : '/images/defaults/product.jpeg' %>"
                                                         class="product-image img-fluid rounded-start object-cover"
                                                         alt="<%= product.nombre %>"
                                                         onerror="this.onerror=null;this.src='/images/defaults/product.jpeg';">
                                                </div>
                                                <div class="col-7">
                                                    <div class="card-body d-flex flex-column h-100">
                                                        <h6 class="card-title">
                                                            <%= product.nombre %>
                                                            <% if (product.destacado) { %>
                                                                <span class="badge bg-warning ms-1">⭐</span>
                                                            <% } %>
                                                        </h6>
                                                        <p class="card-text text-muted small flex-grow-1">
                                                            <%= product.descripcion %>
                                                        </p>
                                                        
                                                        <div class="product-footer mt-auto">
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <div class="price">
                                                                    <% if (product.precio_descuento && product.precio_descuento < product.precio) { %>
                                                                        <% const descuentoPorcentaje = Math.round(((product.precio - product.precio_descuento) / product.precio) * 100); %>
                                                                        <div class="d-flex flex-column align-items-start">
                                                                            <span class="badge bg-success mb-1">
                                                                                <i class="fas fa-tag"></i> -<%= descuentoPorcentaje %>%
                                                                            </span>
                                                                            <div>
                                                                                <span class="text-muted text-decoration-line-through small">
                                                                                    $<%= product.precio %>
                                                                                </span>
                                                                                <strong style="color: #000;">
                                                                                    $<%= product.precio_descuento %>
                                                                                </strong>
                                                                            </div>
                                                                        </div>
                                                                    <% } else { %>
                                                                        <strong style="color: #000;">
                                                                            $<%= product.precio %>
                                                                        </strong>
                                                                    <% } %>
                                                                </div>
                                                                
                                                                <button class="btn btn-sm add-to-cart-btn" style="background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%); color: white; border: none;"
    data-product-id="<%= product.id %>"
    data-product-name="<%= product.nombre %>"
    data-product-price="<%= product.precio_descuento || product.precio %>"
    data-restaurant-id="<%= restaurant.id %>"
    <% if (restaurant.cerrado_admin) { %>disabled data-bs-toggle="tooltip" title="No disponible: Restaurante cerrado por el administrador"<% } %>>
    <i class="fas fa-plus"></i>
</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>
                <% }) %>

                <!-- Reviews Section -->
                <div class="reviews-section mt-5">
                    <h3 class="mb-4">
                        <i class="fas fa-star text-warning"></i>
                        Reseñas de Clientes
                    </h3>
                    
                    <% if (reviews.length > 0) { %>
                        <div class="row">
                            <% reviews.forEach(review => { %>
                                <div class="col-md-6 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-2">
                                                <img src="<%= review.imagen_perfil ? getImageUrl(review.imagen_perfil, '/images/defaults/user.png') : '/images/defaults/user.png' %>"
                                                     alt="<%= review.nombre %>"
                                                     class="user-image rounded-circle me-2"
                                                     width="40" height="40"
                                                     onerror="this.src='/images/defaults/user.png'">
                                                <div>
                                                    <h6 class="mb-0"><%= review.nombre %> <%= review.apellido %></h6>
                                                    <div class="rating">
                                                        <% for (let i = 1; i <= 5; i++) { %>
                                                            <i class="fas fa-star <%= i <= review.calificacion_restaurante ? 'text-warning' : 'text-muted' %>"></i>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                            <p class="card-text"><%= review.comentario_restaurante || 'Sin comentario' %></p>
                                            <small class="text-muted">
                                                <%= new Date(review.fecha_resena).toLocaleDateString('es-AR') %>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="fas fa-star fa-3x text-muted mb-3"></i>
                            <h5>Aún no hay reseñas</h5>
                            <p class="text-muted">Sé el primero en calificar este restaurante</p>
                        </div>
                    <% } %>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>

<!-- Add to Cart Modal -->
<div class="modal fade" id="addToCartModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar al Carrito</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <img id="modalProductImage" src="" alt="" class="img-fluid mb-3" style="max-height: 200px;">
                    <h5 id="modalProductName"></h5>
                    <p id="modalProductDescription" class="text-muted"></p>
                    
                    <div class="quantity-selector mb-3">
                        <label class="form-label">Cantidad:</label>
                        <div class="input-group justify-content-center">
                            <button class="btn btn-outline-secondary" type="button" id="decreaseQty">-</button>
                            <input type="number" class="form-control text-center" id="productQuantity" 
                                   value="1" min="1" style="max-width: 80px;">
                            <button class="btn btn-outline-secondary" type="button" id="increaseQty">+</button>
                        </div>
                    </div>
                    
                    <div class="price-display">
                        <h4 class="text-primary">$<span id="totalPrice">0</span></h4>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn" id="confirmAddToCart" style="background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%); color: white; border: none;">
                    <i class="fas fa-shopping-cart"></i>
                    Agregar al Carrito
                </button>
            </div>
        </div>
    </div>
</div>

<style>
.restaurant-logo {
    max-height: 120px;
    object-fit: cover;
}

.restaurant-info .info-item {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 0.9rem;
}

.menu-categories {
    top: 20px;
    z-index: 900;
}

.product-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    border: none;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.product-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.15);
}

.object-cover {
    object-fit: cover;
}

.category-title {
    border-bottom: 2px solid #ff6b35;
    padding-bottom: 10px;
}

.cart-summary {
    z-index: 1000;
}

.add-to-cart-btn {
    border-radius: 50%;
    width: 35px;
    height: 35px;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.quantity-selector input {
    border-left: none;
    border-right: none;
}
</style>


<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100">
        <div class="col-md-6 col-lg-4 mx-auto">
            
            <!-- Back button -->
            <div class="mb-4">
                <a href="/auth/login" class="btn btn-link text-decoration-none p-0">
                    <i class="fas fa-arrow-left me-2"></i>Volver al inicio de sesi칩n
                </a>
            </div>

            <!-- Logo -->
            <div class="text-center mb-4">
                <a href="/" class="text-decoration-none">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <div class="rounded-circle p-3" style="background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);">
                            <i class="fas fa-utensils text-white fs-3"></i>
                        </div>
                    </div>
                    <h2 class="fw-bold text-primary">A la Mesa</h2>
                </a>
                <h4 class="fw-normal text-muted">Recuperar Contrase침a</h4>
            </div>

            <!-- Forgot Password Form -->
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    
                    <% if (message) { %>
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle me-2"></i><%= message %>
                        </div>
                    <% } %>
                    <% if (error) { %>
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i><%= error %>
                        </div>
                    <% } %>

                    <p class="text-muted text-center mb-4">Ingresa tu email para recibir un enlace de recuperaci칩n.</p>

                    <form action="/auth/forgot-password" method="POST">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-envelope text-muted"></i>
                                </span>
                                <input type="email" class="form-control border-start-0" 
                                       id="email" name="email" placeholder="tu@email.com" required>
                            </div>
                        </div>

                        <button type="submit" class="btn w-100 py-2 mb-3" style="background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%); color: white; border: none;">
                            <i class="fas fa-paper-plane me-2"></i>Enviar Enlace de Recuperaci칩n
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
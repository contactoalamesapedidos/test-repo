<div class="container mt-4">
    <div class="row">
        <!-- Cart Items -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header text-white primary-gradient-bg">
                    <h5 class="mb-0">
                        <i class="fas fa-shopping-cart me-2"></i>
                        Tu Carrito
                    </h5>
                </div>
                <div class="card-body">
                    <% if (cart && cart.length > 0) { %>
                        <!-- Restaurant Info -->
                        <div class="restaurant-info mb-4 p-3 bg-light rounded">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-store text-orange fs-4 me-3"></i>
                                <div>
                                    <h6 class="mb-1"><%= cart[0].restaurante_nombre %></h6>
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Solo puedes agregar productos del mismo restaurante
                                    </small>
                                </div>
                            </div>
                        </div>

                        <!-- Cart Items -->
                        <div class="cart-items">
                            <% cart.forEach(item => { %>
                                <div class="cart-item d-flex align-items-start mb-3 p-3 border rounded">
                                    <img src="<%= item.imagen ? (item.imagen.startsWith('/') ? item.imagen : '/uploads/' + item.imagen) : '/images/defaults/product.jpeg' %>"
                                         alt="<%= item.name %>" 
                                         class="rounded me-3 flex-shrink-0 object-fit-cover" width="80" height="80"
                                         onerror="this.onerror=null;this.src='/images/defaults/product.jpeg';">
                                    
                                    <div class="flex-grow-1 min-w-0">
                                        <h6 class="mb-1 text-truncate"><%= item.name %></h6>
                                        <% if (item.specialInstructions) { %>
                                            <small class="text-muted d-block mb-1 text-break">
                                                <i class="fas fa-comment-alt me-1"></i>
                                                <%= item.specialInstructions %>
                                            </small>
                                        <% } %>
                                        <div class="d-flex align-items-center flex-wrap">
                                            <div class="quantity-controls me-3 mb-2">
                                                <button class="cart-qty-btn" data-action="decrement" data-producto-id="<%= item.producto_id %>">-</button>
                                                <span class="mx-2"><%= item.quantity || item.cantidad %></span>
                                                <button class="cart-qty-btn" data-action="increment" data-producto-id="<%= item.producto_id %>">+</button>
                                            </div>
                                            <div class="price text-end">
                                                <strong>$<%= ((item.price || item.precio) * (item.quantity || item.cantidad)).toFixed(2) %></strong>
                                                <small class="text-muted d-block">$<%= (item.price || item.precio).toFixed(2) %> c/u</small>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <button class="remove-item-btn flex-shrink-0 ms-2" data-producto-id="<%= item.producto_id %>">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            <% }) %>
                        </div>

                        <!-- Clear Cart Button -->
                        <div class="text-end mt-3">
                            <button class="btn btn-outline-danger clear-cart-btn">
                                <i class="fas fa-trash me-2"></i>
                                Vaciar Carrito
                            </button>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                            <h5>Tu carrito está vacío</h5>
                            <p class="text-muted">Agrega productos de tus restaurantes favoritos</p>
                            <a href="/search" class="btn mt-3 btn-primary-gradient">
                                <i class="fas fa-utensils me-2"></i>
                                Ver Restaurantes
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header text-white primary-gradient-bg">
                    <h5 class="mb-0">
                        <i class="fas fa-receipt me-2"></i>
                        Resumen del Pedido
                    </h5>
                </div>
                <div class="card-body">
                    <% if (cart && cart.length > 0) { %>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal</span>
                            <strong>$<%= subtotal.toFixed(2) %></strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Envío</span>
                            <strong>$<%= deliveryFee.toFixed(2) %></strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="fs-5">Total</span>
                            <strong class="fs-5 text-orange">$<%= total.toFixed(2) %></strong>
                        </div>
                        
                        <a href="/orders/checkout" class="btn w-100 mb-3 proceed-checkout-btn btn-primary-gradient">
                            <i class="fas fa-credit-card me-2"></i>
                            Proceder al Pago
                        </a>
                        
                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                El pago se realiza al recibir el pedido
                            </small>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <p class="text-muted mb-0">Agrega productos para ver el resumen</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.text-orange {
  color: #ff6b35 !important;
}
.quantity-controls {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.quantity-controls button {
    width: 30px;
    height: 30px;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #ddd;
    background: white;
    border-radius: 4px;
}

.quantity-controls button:hover {
    background: #f8f9fa;
}

.cart-item img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    flex-shrink: 0;
}

.cart-item .price {
    min-width: 80px;
    text-align: right;
}

.cart-item .flex-grow-1 {
    min-width: 0;
    overflow: hidden;
}

.cart-item h6 {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
}

.remove-item-btn {
    background: none;
    border: none;
    color: #dc3545;
    padding: 8px;
    border-radius: 4px;
    transition: background-color 0.2s;
}

.remove-item-btn:hover {
    background-color: #f8d7da;
}

@media (max-width: 768px) {
    .cart-item {
        flex-direction: row;
        align-items: flex-start;
    }
    
    .cart-item img {
        width: 60px;
        height: 60px;
        margin-right: 10px;
    }
    
    .cart-item .flex-grow-1 {
        min-width: 0;
        flex: 1;
    }
    
    .cart-item .d-flex {
        flex-wrap: wrap;
        gap: 8px;
    }
    
    .quantity-controls {
        margin-right: 0 !important;
        margin-bottom: 0 !important;
    }
    
    .cart-item .price {
        min-width: 60px;
        font-size: 0.9rem;
    }
    
    .cart-item h6 {
        font-size: 0.95rem;
    }
}
</style>


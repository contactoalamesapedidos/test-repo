<%- include('../partials/header') %>

<div class="admin-layout">
    <%- include('partials/sidebar') %>

    <div class="admin-content">
        <!-- Top Bar -->
        <div class="admin-topbar bg-white shadow-sm px-4 py-3 d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0">Generar Cobros Semanales</h5>
                <small class="text-muted">Genera los cobros de comisiones para los restaurantes</small>
            </div>
            <div class="d-flex align-items-center">
                <span class="me-3">
                    <i class="fas fa-user-shield me-1"></i>
                    <%= user.nombre %> <%= user.apellido %>
                </span>
                <a href="/auth/logout" class="btn btn-outline-danger btn-sm">
                    <i class="fas fa-sign-out-alt me-1"></i>Salir
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="p-4">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <form id="generarCobrosForm" class="needs-validation" novalidate>
                                <!-- Período -->
                                <div class="mb-4">
                                    <h6 class="mb-3">Período de Cobro</h6>
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label class="form-label">Fecha Inicio</label>
                                            <input type="date" class="form-control" id="fechaInicio" name="fecha_inicio" required>
                                            <div class="invalid-feedback">
                                                Selecciona una fecha de inicio
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Fecha Fin</label>
                                            <input type="date" class="form-control" id="fechaFin" name="fecha_fin" required>
                                            <div class="invalid-feedback">
                                                Selecciona una fecha de fin
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Restaurantes -->
                                <div class="mb-4">
                                    <h6 class="mb-3">Restaurantes</h6>
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="checkbox" id="seleccionarTodos">
                                        <label class="form-check-label" for="seleccionarTodos">
                                            Seleccionar todos los restaurantes
                                        </label>
                                    </div>
                                    <div class="restaurantes-list border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                                        <% restaurantes.forEach(restaurante => { %>
                                            <div class="form-check mb-2">
                                                <input class="form-check-input restaurante-check" 
                                                       type="checkbox" 
                                                       name="restaurante_ids[]" 
                                                       value="<%= restaurante.id %>" 
                                                       id="restaurante<%= restaurante.id %>">
                                                <label class="form-check-label" for="restaurante<%= restaurante.id %>">
                                                    <%= restaurante.nombre %>
                                                    <% if (ultimosCobros[restaurante.id]) { %>
                                                        <small class="text-muted d-block">
                                                            Último cobro: <%= new Date(ultimosCobros[restaurante.id]).toLocaleDateString('es-AR') %>
                                                        </small>
                                                    <% } %>
                                                </label>
                                            </div>
                                        <% }) %>
                                    </div>
                                </div>

                                <!-- Submit -->
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-calculator me-2"></i>Generar Cobros
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Instrucciones -->
                    <div class="card border-0 shadow-sm mt-4">
                        <div class="card-body">
                            <h6 class="mb-3">
                                <i class="fas fa-info-circle me-2"></i>
                                Instrucciones
                            </h6>
                            <ul class="mb-0">
                                <li>Selecciona el período para el cual deseas generar los cobros</li>
                                <li>Puedes seleccionar todos los restaurantes o solo algunos específicos</li>
                                <li>El sistema calculará automáticamente las comisiones (10% de las ventas)</li>
                                <li>Los cobros generados aparecerán en la lista de cobros pendientes</li>
                                <li>Los restaurantes podrán subir sus comprobantes de pago</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.admin-layout {
    display: flex;
    min-height: 100vh;
}

.admin-sidebar {
    width: 280px;
    flex-shrink: 0;
}

.admin-content {
    flex-grow: 1;
    background-color: #f8f9fa;
}

.admin-topbar {
    border-bottom: 1px solid #dee2e6;
}

.restaurantes-list::-webkit-scrollbar {
    width: 6px;
}

.restaurantes-list::-webkit-scrollbar-track {
    background: #f1f1f1;
}

.restaurantes-list::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 3px;
}

.restaurantes-list::-webkit-scrollbar-thumb:hover {
    background: #555;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Form validation
    const form = document.getElementById('generarCobrosForm');
    form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        if (!form.checkValidity()) {
            e.stopPropagation();
            form.classList.add('was-validated');
            return;
        }

        // Get selected restaurants
        const restaurantesSeleccionados = Array.from(document.querySelectorAll('.restaurante-check:checked'))
            .map(cb => cb.value);

        if (restaurantesSeleccionados.length === 0) {
            alert('Selecciona al menos un restaurante');
            return;
        }

        // Get dates
        const fechaInicio = document.getElementById('fechaInicio').value;
        const fechaFin = document.getElementById('fechaFin').value;

        try {
            const response = await fetch('/admin/cobros/generar', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    fecha_inicio: fechaInicio,
                    fecha_fin: fechaFin,
                    restaurante_ids: restaurantesSeleccionados
                })
            });

            const data = await response.json();
            
            if (data.success) {
                alert(data.message);
                window.location.href = '/admin/cobros';
            } else {
                alert(data.message || 'Error generando cobros');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Error generando cobros');
        }
    });

    // Select all restaurants
    const selectAllCheckbox = document.getElementById('seleccionarTodos');
    const restaurantCheckboxes = document.querySelectorAll('.restaurante-check');

    selectAllCheckbox.addEventListener('change', function() {
        restaurantCheckboxes.forEach(checkbox => {
            checkbox.checked = this.checked;
        });
    });

    // Set default dates (last week)
    const today = new Date();
    const lastWeek = new Date(today.getTime() - 7 * 24 * 60 * 60 * 1000);
    
    document.getElementById('fechaInicio').value = lastWeek.toISOString().split('T')[0];
    document.getElementById('fechaFin').value = today.toISOString().split('T')[0];
});
</script>

<%- include('../partials/footer') %> 
<%- include('../partials/header') %>

<!-- Admin Sidebar -->
<div class="admin-layout">
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <div class="admin-content">
        <!-- Top Bar -->
        <div class="admin-topbar bg-white shadow-sm px-4 py-3 d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0">Gestión de Restaurantes</h5>
                <small class="text-muted">Administra todos los restaurantes de la plataforma</small>
            </div>
            <div class="d-flex align-items-center gap-2">
                <a href="/admin/restaurantes/crear/nuevo" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Nuevo Restaurante
                </a>
                <a href="/admin" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>

        <!-- Content -->
        <div class="p-4">
            <!-- Filters -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <form method="GET" action="/admin/restaurantes" class="row g-3">
                        <div class="col-md-4">
                            <label for="search" class="form-label">Buscar</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   value="<%= filtros.search %>" placeholder="Nombre, email o propietario...">
                        </div>
                        <div class="col-md-3">
                            <label for="estado" class="form-label">Estado</label>
                            <select class="form-select" id="estado" name="estado">
                                <option value="">Todos los estados</option>
                                <option value="activos" <%= filtros.estado === 'activos' ? 'selected' : '' %>>Activos</option>
                                <option value="inactivos" <%= filtros.estado === 'inactivos' ? 'selected' : '' %>>Inactivos</option>
                                <option value="verificados" <%= filtros.estado === 'verificados' ? 'selected' : '' %>>Verificados</option>
                                <option value="no_verificados" <%= filtros.estado === 'no_verificados' ? 'selected' : '' %>>No verificados</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="categoria" class="form-label">Categoría</label>
                            <select class="form-select" id="categoria" name="categoria">
                                <option value="">Todas las categorías</option>
                                <% if (typeof categorias !== 'undefined') { %>
                                    <% for (let i = 0; i < categorias.length; i++) { %>
                                        <option value="<%= categorias[i].id %>" 
                                                <%= filtros.categoria === categorias[i].id ? 'selected' : '' %>>
                                            <%= categorias[i].nombre %>
                                        </option>
                                    <% } %>
                                <% } %>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search me-1"></i>Filtrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Bulk Actions -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-primary" onclick="accionMasiva('activar')">
                                <i class="fas fa-check me-1"></i>Activar Seleccionados
                            </button>
                            <button class="btn btn-outline-danger" onclick="accionMasiva('desactivar')">
                                <i class="fas fa-times me-1"></i>Desactivar Seleccionados
                            </button>
                        </div>
                        <button class="btn btn-outline-secondary" onclick="exportarRestaurantes()">
                            <i class="fas fa-download me-1"></i>Exportar
                        </button>
                    </div>
                </div>
            </div>

            <!-- Restaurants List -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <% if (restaurants && restaurants.length > 0) { %>
                        <!-- Vista de tabla para pantallas grandes -->
                        <div class="table-responsive d-none d-md-block">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th width="40">
                                            <input type="checkbox" id="selectAll" class="form-check-input">
                                        </th>
                                        <th>Restaurante</th>
                                        <th>Propietario</th>
                                        <th>Categoría</th>
                                        <th>Productos</th>
                                        <th>Ventas</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (var i = 0; i < restaurants.length; i++) { %>
                                        <tr>
                                            <td>
                                                <input type="checkbox" class="form-check-input restaurant-checkbox" 
                                                       value="<%= restaurants[i].id %>">
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="/uploads/<%= restaurants[i].imagen_logo || 'no-image.png' %>" 
                                                         alt="<%= restaurants[i].nombre %>" 
                                                         class="rounded me-2" width="40" height="40"
                                                         onerror="this.src='/images/no-image.png'">
                                                    <div>
                                                        <div class="fw-bold"><%= restaurants[i].nombre %></div>
                                                        <small class="text-muted">
                                                            <i class="fas fa-map-marker-alt me-1"></i>
                                                            <%= restaurants[i].direccion.substring(0, 30) %>...
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="fw-bold"><%= restaurants[i].propietario_nombre %> <%= restaurants[i].propietario_apellido %></div>
                                                <small class="text-muted"><%= restaurants[i].email %></small>
                                            </td>
                                            <td>
                                                <% if (restaurants[i].categorias) { %>
                                                    <% const cats = restaurants[i].categorias.split(','); %>
                                                    <% for (let j = 0; j < cats.length; j++) { %>
                                                        <span class="badge" style="background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%); color: white;"><%= cats[j].trim() %></span>
                                                        <% if (j < cats.length - 1) { %> • <% } %>
                                                    <% } %>
                                                <% } else { %>
                                                    <span class="text-muted">Sin categoría</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <span class="badge bg-info"><%= restaurants[i].total_productos %></span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success"><%= restaurants[i].total_pedidos %></span>
                                            </td>
                                            <td>
                                                <div class="d-flex gap-1">
                                                    <span class="badge <%= restaurants[i].activo ? 'bg-success' : 'bg-danger' %>">
                                                        <%= restaurants[i].activo ? 'Activo' : 'Inactivo' %>
                                                    </span>
                                                    <span class="badge <%= restaurants[i].verificado ? 'bg-info' : 'bg-warning' %>">
                                                        <%= restaurants[i].verificado ? 'Verificado' : 'Pendiente' %>
                                                    </span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" 
                                                            type="button" data-bs-toggle="dropdown">
                                                        <i class="fas fa-ellipsis-v"></i>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <a class="dropdown-item" href="/admin/restaurantes/<%= restaurants[i].id %>">
                                                                <i class="fas fa-eye me-2"></i>Ver Detalle
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" href="/admin/restaurantes/<%= restaurants[i].id %>/editar">
                                                                <i class="fas fa-edit me-2"></i>Editar
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" href="/admin/productos?restaurante=<%= restaurants[i].id %>">
                                                                <i class="fas fa-utensils me-2"></i>Gestionar Productos
                                                            </a>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <button class="dropdown-item" 
                                                                    onclick="toggleEstado(<%= restaurants[i].id %>, '<%= restaurants[i].activo ? 'desactivar' : 'activar' %>')">
                                                                <i class="fas fa-<%= restaurants[i].activo ? 'times' : 'check' %> me-2"></i>
                                                                <%= restaurants[i].activo ? 'Desactivar' : 'Activar' %>
                                                            </button>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item text-danger" 
                                                               href="#" onclick="eliminarRestaurante(<%= restaurants[i].id %>, '<%= restaurants[i].nombre %>')">
                                                                <i class="fas fa-trash me-2"></i>Eliminar
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Vista de tarjetas para móviles -->
                        <div class="d-md-none row g-3 p-3">
                            <% restaurants.forEach(function(restaurant) { %>
                                <div class="col-12 mb-3">
                                    <div class="card shadow-sm">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-2">
                                                <img src="/uploads/<%= restaurant.imagen_logo || 'no-image.png' %>" 
                                                     alt="<%= restaurant.nombre %>" 
                                                     class="rounded me-2" width="50" height="50"
                                                     onerror="this.src='/images/no-image.png'">
                                                <div>
                                                    <h5 class="card-title mb-0"><%= restaurant.nombre %></h5>
                                                    <small class="text-muted"><%= restaurant.direccion.substring(0, 40) %>...</small>
                                                </div>
                                            </div>
                                            <p class="card-text mb-1"><strong>ID:</strong> <%= restaurant.id %></p>
                                            <p class="card-text mb-1"><strong>Propietario:</strong> <%= restaurant.propietario_nombre %> <%= restaurant.propietario_apellido %></p>
                                            <p class="card-text mb-1"><strong>Email:</strong> <%= restaurant.email %></p>
                                            <p class="card-text mb-1"><strong>Categoría:</strong> 
                                                <% if (restaurant.categorias) { %>
                                                    <% const cats = restaurant.categorias.split(','); %>
                                                    <% for (let j = 0; j < cats.length; j++) { %>
                                                        <span class="badge" style="background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%); color: white;"><%= cats[j].trim() %></span>
                                                        <% if (j < cats.length - 1) { %> • <% } %>
                                                    <% } %>
                                                <% } else { %>
                                                    <span class="text-muted">Sin categoría</span>
                                                <% } %>
                                            </p>
                                            <p class="card-text mb-1"><strong>Productos:</strong> <span class="badge bg-info"><%= restaurant.total_productos %></span></p>
                                            <p class="card-text mb-1"><strong>Ventas:</strong> <span class="badge bg-success"><%= restaurant.total_pedidos %></span></p>
                                            <p class="card-text mb-3"><strong>Estado:</strong> 
                                                <span class="badge <%= restaurant.activo ? 'bg-success' : 'bg-danger' %>">
                                                    <%= restaurant.activo ? 'Activo' : 'Inactivo' %>
                                                </span>
                                                <span class="badge <%= restaurant.verificado ? 'bg-info' : 'bg-warning' %>">
                                                    <%= restaurant.verificado ? 'Verificado' : 'Pendiente' %>
                                                </span>
                                            </p>
                                            <div class="d-grid gap-2">
                                                <a class="btn btn-sm btn-outline-primary" href="/admin/restaurantes/<%= restaurant.id %>">
                                                    <i class="fas fa-eye me-2"></i>Ver Detalle
                                                </a>
                                                <a class="btn btn-sm btn-outline-secondary" href="/admin/restaurantes/<%= restaurant.id %>/editar">
                                                    <i class="fas fa-edit me-2"></i>Editar
                                                </a>
                                                <a class="btn btn-sm btn-outline-info" href="/admin/productos?restaurante=<%= restaurant.id %>">
                                                    <i class="fas fa-utensils me-2"></i>Gestionar Productos
                                                </a>
                                                <button class="btn btn-sm <%= restaurant.activo ? 'btn-danger' : 'btn-success' %>" 
                                                        onclick="toggleEstado(<%= restaurant.id %>, '<%= restaurant.activo ? 'desactivar' : 'activar' %>')">
                                                    <i class="fas fa-<%= restaurant.activo ? 'times' : 'check' %> me-2"></i>
                                                    <%= restaurant.activo ? 'Desactivar' : 'Activar' %>
                                                </button>
                                                <button class="btn btn-sm btn-danger" 
                                                        onclick="eliminarRestaurante(<%= restaurant.id %>, '<%= restaurant.nombre %>')">
                                                    <i class="fas fa-trash me-2"></i>Eliminar
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>

                        <!-- Paginación -->
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mt-4">
                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>&limit=<%= limit %>&search=<%= filtros.search %>&estado=<%= filtros.estado %>&categoria=<%= filtros.categoria %>">Anterior</a>
                                </li>
                                <% for (let i = 1; i <= totalPages; i++) { %>
                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %>&limit=<%= limit %>&search=<%= filtros.search %>&estado=<%= filtros.estado %>&categoria=<%= filtros.categoria %>"><%= i %></a>
                                    </li>
                                <% } %>
                                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>&limit=<%= limit %>&search=<%= filtros.search %>&estado=<%= filtros.estado %>&categoria=<%= filtros.categoria %>">Siguiente</a>
                                </li>
                            </ul>
                        </nav>

                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-store fa-3x text-muted mb-3"></i>
                            <h5>No se encontraron restaurantes</h5>
                            <p class="text-muted">Intenta cambiar los filtros de búsqueda</p>
                            <a href="/admin/restaurantes/crear/nuevo" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Crear Primer Restaurante
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<% if (user && user.tipo_usuario === 'admin') { %>
<nav class="admin-mobile-nav admin-mobile-nav-main d-md-none d-lg-none d-xl-none">
  <a href="/admin" class="admin-mobile-nav-item <%= currentPath === '/admin' ? 'active' : '' %>"><i class="fas fa-chart-bar"></i><span>Dashboard</span></a>
  <a href="/admin/restaurantes" class="admin-mobile-nav-item <%= currentPath.startsWith('/admin/restaurantes') ? 'active' : '' %>"><i class="fas fa-store"></i><span>Restaurantes</span></a>
  <a href="/admin/cobros" class="admin-mobile-nav-item <%= currentPath.startsWith('/admin/cobros') ? 'active' : '' %>"><i class="fas fa-money-bill-wave"></i><span>Cobros</span></a>
  <a href="/admin/productos" class="admin-mobile-nav-item <%= currentPath.startsWith('/admin/productos') ? 'active' : '' %>"><i class="fas fa-utensils"></i><span>Productos</span></a>
</nav>
<nav class="admin-mobile-nav admin-mobile-nav-secondary d-md-none d-lg-none d-xl-none">
  <a href="/admin/comprobantes" class="admin-mobile-nav-item <%= currentPath.startsWith('/admin/comprobantes') ? 'active' : '' %>"><i class="fas fa-receipt"></i><span>Comprobantes</span></a>
  <a href="/admin/usuarios" class="admin-mobile-nav-item <%= currentPath.startsWith('/admin/usuarios') ? 'active' : '' %>"><i class="fas fa-users"></i><span>Usuarios</span></a>
  <a href="/admin/reportes" class="admin-mobile-nav-item <%= currentPath.startsWith('/admin/reportes') ? 'active' : '' %>"><i class="fas fa-chart-line"></i><span>Reportes</span></a>
  <a href="/admin/configuracion" class="admin-mobile-nav-item <%= currentPath.startsWith('/admin/configuracion') ? 'active' : '' %>"><i class="fas fa-cog"></i><span>Config</span></a>
</nav>
<% } %>

<script>
// Select all functionality
document.getElementById('selectAll').addEventListener('change', function() {
    const checkboxes = document.querySelectorAll('.restaurant-checkbox');
    checkboxes.forEach(checkbox => {
        checkbox.checked = this.checked;
    });
});

// Toggle restaurant status
function toggleEstado(restaurantId, accion) {
    const texto = accion === 'activar' ? 'activar' : 'desactivar';
    
    if (confirm(`¿Estás seguro de que quieres ${texto} este restaurante?`)) {
        fetch(`/admin/restaurantes/${restaurantId}/toggle`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ accion: accion })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showNotification(`Restaurante ${texto} exitosamente`, 'success');
                setTimeout(() => location.reload(), 1000);
            } else {
                showNotification(data.message || 'Error procesando la acción', 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showNotification('Error procesando la acción', 'error');
        });
    }
}

// Delete restaurant
function eliminarRestaurante(id, nombre) {
    if (confirm(`¿Estás seguro de que quieres eliminar el restaurante "${nombre}"? Esta acción no se puede deshacer.`)) {
        fetch(`/admin/restaurantes/${id}/eliminar`, {
            method: 'DELETE'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showNotification('Restaurante eliminado exitosamente', 'success');
                setTimeout(() => location.reload(), 1000);
            } else {
                showNotification(data.message || 'Error eliminando el restaurante', 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showNotification('Error eliminando el restaurante', 'error');
        });
    }
}

// Bulk actions
function accionMasiva(accion) {
    const checkboxes = document.querySelectorAll('.restaurant-checkbox:checked');
    if (checkboxes.length === 0) {
        showNotification('Selecciona al menos un restaurante', 'warning');
        return;
    }
    
    const restaurantIds = Array.from(checkboxes).map(cb => cb.value);
    const confirmText = `¿Estás seguro de que quieres ${accion} ${restaurantIds.length} restaurante(s)?`;
    
    if (confirm(confirmText)) {
        fetch('/admin/restaurantes/accion-masiva', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                accion: accion,
                restaurantIds: restaurantIds
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showNotification(`Acción ${accion} aplicada exitosamente`, 'success');
                setTimeout(() => location.reload(), 1000);
            } else {
                showNotification(data.message || 'Error procesando la acción masiva', 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showNotification('Error procesando la acción masiva', 'error');
        });
    }
}

// Export restaurants
function exportarRestaurantes() {
    const params = new URLSearchParams(window.location.search);
    params.set('export', 'csv');
    window.open(`/admin/restaurantes/export?${params.toString()}`, '_blank');
}
</script>


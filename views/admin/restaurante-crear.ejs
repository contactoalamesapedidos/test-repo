<%- include('../partials/header') %>

<!-- Admin Sidebar -->
<div class="admin-layout">
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <div class="admin-content">
        <!-- Top Bar -->
        <div class="admin-topbar bg-white shadow-sm px-4 py-3 d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0">Crear Nuevo Restaurante</h5>
                <small class="text-muted">Registra un nuevo restaurante en la plataforma</small>
            </div>
            <div class="d-flex align-items-center gap-2">
                <a href="/admin/restaurantes" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Volver a Restaurantes
                </a>
            </div>
        </div>

        <!-- Content -->
        <div class="p-4">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0">
                                <i class="fas fa-store me-2"></i>
                                Información del Restaurante
                            </h6>
                        </div>
                        <div class="card-body">
                            <% if (typeof error !== 'undefined' && error) { %>
                                <div class="alert alert-danger">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <%= error %>
                                </div>
                            <% } %>

                            <form method="POST" action="/admin/restaurantes/crear">
                                <!-- Información del Propietario -->
                                <div class="row g-3 mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2">
                                            <i class="fas fa-user me-2"></i>
                                            Datos del Propietario
                                        </h6>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <label for="nombre" class="form-label">Nombre *</label>
                                        <input type="text" class="form-control" id="nombre" name="nombre" 
                                               value="<%= typeof formData !== 'undefined' ? formData.nombre || '' : '' %>" required>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <label for="apellido" class="form-label">Apellido *</label>
                                        <input type="text" class="form-control" id="apellido" name="apellido" 
                                               value="<%= typeof formData !== 'undefined' ? formData.apellido || '' : '' %>" required>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <label for="email" class="form-label">Email *</label>
                                        <input type="email" class="form-control" id="email" name="email" 
                                               value="<%= typeof formData !== 'undefined' ? formData.email || '' : '' %>" required>
                                        <div class="form-text">Este será el email de acceso al panel</div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <label for="password" class="form-label">Contraseña *</label>
                                        <input type="password" class="form-control" id="password" name="password" required>
                                        <div class="form-text">Mínimo 6 caracteres</div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <label for="telefono" class="form-label">Teléfono</label>
                                        <input type="tel" class="form-control" id="telefono" name="telefono" 
                                               value="<%= typeof formData !== 'undefined' ? formData.telefono || '' : '' %>">
                                    </div>
                                </div>

                                <!-- Información del Restaurante -->
                                <div class="row g-3 mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2">
                                            <i class="fas fa-store me-2"></i>
                                            Datos del Restaurante
                                        </h6>
                                    </div>
                                    
                                    <div class="col-md-8">
                                        <label for="restaurante_nombre" class="form-label">Nombre del Restaurante *</label>
                                        <input type="text" class="form-control" id="restaurante_nombre" name="restaurante_nombre" 
                                               value="<%= typeof formData !== 'undefined' ? formData.restaurante_nombre || '' : '' %>" required>
                                    </div>
                                    
                                    <div class="col-md-4">
                                        <label for="categoria_id" class="form-label">Categoría *</label>
                                        <select class="form-select" id="categoria_id" name="categoria_id" required>
                                            <option value="">Seleccionar categoría</option>
                                            <% categorias.forEach(categoria => { %>
                                                <option value="<%= categoria.id %>" 
                                                        <%= typeof formData !== 'undefined' && formData.categoria_id == categoria.id ? 'selected' : '' %>>
                                                    <%= categoria.nombre %>
                                                </option>
                                            <% }) %>
                                        </select>
                                    </div>
                                    
                                    <div class="col-12">
                                        <label for="restaurante_descripcion" class="form-label">Descripción *</label>
                                        <textarea class="form-control" id="restaurante_descripcion" name="restaurante_descripcion" 
                                                  rows="3" required><%= typeof formData !== 'undefined' ? formData.restaurante_descripcion || '' : '' %></textarea>
                                        <div class="form-text">Mínimo 20 caracteres. Describe el restaurante, especialidades, etc.</div>
                                    </div>
                                    
                                    <div class="col-md-8">
                                        <label for="restaurante_direccion" class="form-label">Dirección *</label>
                                        <input type="text" class="form-control" id="restaurante_direccion" name="restaurante_direccion" 
                                               value="<%= typeof formData !== 'undefined' ? formData.restaurante_direccion || '' : '' %>" required>
                                    </div>
                                    
                                    <div class="col-md-4">
                                        <label for="restaurante_telefono" class="form-label">Teléfono del Restaurante</label>
                                        <input type="tel" class="form-control" id="restaurante_telefono" name="restaurante_telefono" 
                                               value="<%= typeof formData !== 'undefined' ? formData.restaurante_telefono || '' : '' %>">
                                    </div>
                                </div>

                                <!-- Horarios de Operación -->
                                <div class="row g-3 mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2">
                                            <i class="fas fa-clock me-2"></i>
                                            Horarios de Operación
                                        </h6>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <label for="horario_apertura" class="form-label">Horario de Apertura</label>
                                        <input type="time" class="form-control" id="horario_apertura" name="horario_apertura" 
                                               value="<%= typeof formData !== 'undefined' ? formData.horario_apertura || '09:00' : '09:00' %>">
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <label for="horario_cierre" class="form-label">Horario de Cierre</label>
                                        <input type="time" class="form-control" id="horario_cierre" name="horario_cierre" 
                                               value="<%= typeof formData !== 'undefined' ? formData.horario_cierre || '22:00' : '22:00' %>">
                                    </div>
                                </div>

                                <!-- Estado Inicial -->
                                <div class="row g-3 mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2">
                                            <i class="fas fa-toggle-on me-2"></i>
                                            Estado del Restaurante
                                        </h6>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="activo" name="activo" checked>
                                            <label class="form-check-label" for="activo">
                                                <strong>Restaurante Activo</strong>
                                                <br><small class="text-muted">El restaurante aparecerá en búsquedas</small>
                                            </label>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="verificado" name="verificado" checked>
                                            <label class="form-check-label" for="verificado">
                                                <strong>Restaurante Verificado</strong>
                                                <br><small class="text-muted">Marca de verificación oficial</small>
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <!-- Información Adicional -->
                                <div class="alert alert-info">
                                    <h6><i class="fas fa-info-circle me-2"></i>Información Importante</h6>
                                    <ul class="mb-0 small">
                                        <li>El propietario recibirá un email con las credenciales de acceso</li>
                                        <li>El restaurante será incluido automáticamente en el sistema de cobros semanales (10%)</li>
                                        <li>Podrá agregar productos desde su panel de control</li>
                                        <li>Los datos pueden ser editados posteriormente desde el panel de administración</li>
                                    </ul>
                                </div>

                                <!-- Botones -->
                                <div class="d-flex justify-content-between">
                                    <a href="/admin/restaurantes" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-1"></i>Cancelar
                                    </a>
                                    
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-1"></i>Crear Restaurante
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Form validation
document.querySelector('form').addEventListener('submit', function(e) {
    const description = document.getElementById('restaurante_descripcion').value;
    if (description.length < 20) {
        e.preventDefault();
        alert('La descripción debe tener al menos 20 caracteres.');
        document.getElementById('restaurante_descripcion').focus();
        return false;
    }
    
    const password = document.getElementById('password').value;
    if (password.length < 6) {
        e.preventDefault();
        alert('La contraseña debe tener al menos 6 caracteres.');
        document.getElementById('password').focus();
        return false;
    }
    
    return true;
});

// Character counter for description
document.getElementById('restaurante_descripcion').addEventListener('input', function() {
    const current = this.value.length;
    const min = 20;
    const formText = this.nextElementSibling;
    
    if (current < min) {
        formText.textContent = `Mínimo 20 caracteres. Faltan ${min - current} caracteres.`;
        formText.className = 'form-text text-warning';
    } else {
        formText.textContent = 'Descripción válida ✓';
        formText.className = 'form-text text-success';
    }
});
</script>

<%- include('../partials/footer') %>

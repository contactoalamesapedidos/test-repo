<%- include('../partials/header') %>

<div class="admin-layout">
  <%- include('partials/sidebar', { activePage: 'usuarios' }) %>
  <div class="admin-content p-0">
    <!-- Top Bar -->
    <div class="admin-topbar bg-white shadow-sm px-4 py-3 d-flex justify-content-between align-items-center">
      <div>
        <h5 class="mb-0">Gestión de Usuarios</h5>
        <small class="text-muted">Administra los usuarios de la plataforma</small>
      </div>
      <div class="d-flex align-items-center gap-2">
        <a href="/admin" class="btn btn-outline-secondary">
          <i class="fas fa-arrow-left me-1"></i>Volver
        </a>
      </div>
    </div>

    <div class="p-4">
      <p class="text-muted">Listado paginado de usuarios.</p>
      <% const qSearch = encodeURIComponent((filtros && filtros.search) || ''); const qTipo = encodeURIComponent((filtros && filtros.tipo) || ''); const qActivo = encodeURIComponent((filtros && filtros.activo) || ''); %>

      <!-- Filtros -->
      <div class="card shadow-sm mb-3">
        <div class="card-body">
          <form method="get" action="/admin/usuarios" class="row g-3 align-items-end">
            <div class="col-12 col-md-4">
              <label class="form-label">Búsqueda</label>
              <input type="text" name="search" class="form-control" placeholder="Nombre, apellido, email o teléfono" value="<%= (filtros && filtros.search) ? filtros.search : '' %>">
            </div>
            <div class="col-6 col-md-3">
              <label class="form-label">Tipo</label>
              <select name="tipo" class="form-select">
                <option value="" <%= (!filtros || filtros.tipo === '') ? 'selected' : '' %>>Todos</option>
                <option value="cliente" <%= (filtros && filtros.tipo === 'cliente') ? 'selected' : '' %>>Cliente</option>
                <option value="restaurante" <%= (filtros && filtros.tipo === 'restaurante') ? 'selected' : '' %>>Restaurante</option>
                <option value="admin" <%= (filtros && filtros.tipo === 'admin') ? 'selected' : '' %>>Admin</option>
              </select>
            </div>
            <div class="col-6 col-md-3">
              <label class="form-label">Activo</label>
              <select name="activo" class="form-select">
                <option value="" <%= (!filtros || filtros.activo === '') ? 'selected' : '' %>>Todos</option>
                <option value="1" <%= (filtros && filtros.activo === '1') ? 'selected' : '' %>>Sí</option>
                <option value="0" <%= (filtros && filtros.activo === '0') ? 'selected' : '' %>>No</option>
              </select>
            </div>
            <div class="col-12 col-md-2 d-flex gap-2">
              <input type="hidden" name="limit" value="<%= limit %>">
              <button type="submit" class="btn btn-primary w-100"><i class="fas fa-filter me-1"></i>Filtrar</button>
              <a class="btn btn-outline-secondary" href="/admin/usuarios?limit=<%= limit %>"><i class="fas fa-undo me-1"></i>Limpiar</a>
            </div>
          </form>
          <div class="mt-3">
            <a class="btn btn-success" href="/admin/usuarios/export?search=<%= qSearch %>&tipo=<%= qTipo %>&activo=<%= qActivo %>"><i class="fas fa-file-csv me-1"></i>Exportar CSV</a>
          </div>
        </div>
      </div>

      <% if (usuarios && usuarios.length > 0) { %>
        <!-- Vista de tabla para pantallas grandes -->
        <div class="table-responsive d-none d-md-block">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Ciudad</th>
                        <th>Tipo</th>
                        <th>Activo</th>
                        <th>Fecha Registro</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% usuarios.forEach(function(usuario) { %>
                        <tr>
                            <td><%= usuario.id %></td>
                            <td><%= usuario.nombre %></td>
                            <td><%= usuario.apellido %></td>
                            <td><%= usuario.email %></td>
                            <td><%= usuario.telefono || '-' %></td>
                            <td><%= usuario.ciudad %></td>
                            <td><%= usuario.tipo_usuario %></td>
                            <td><%= usuario.activo ? 'Sí' : 'No' %></td>
                            <td><%= usuario.fecha_registro || '-' %></td>
                            <td>
                                <button class="btn btn-sm btn-danger" onclick='eliminarUsuario(<%= usuario.id %>, <%- JSON.stringify(usuario.email) %>)'>
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Vista de tarjetas para móviles -->
        <div class="row d-md-none">
            <% usuarios.forEach(function(usuario) { %>
                <div class="col-12 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-1"><%= usuario.nombre %> <%= usuario.apellido %></h5>
                            <h6 class="card-subtitle mb-2 text-muted"><%= usuario.email %></h6>
                            <p class="card-text mb-1"><strong>ID:</strong> <%= usuario.id %></p>
                            <p class="card-text mb-1"><strong>Teléfono:</strong> <%= usuario.telefono || '-' %></p>
                            <p class="card-text mb-1"><strong>Ciudad:</strong> <%= usuario.ciudad || '-' %></p>
                            <p class="card-text mb-1"><strong>Tipo:</strong> <%= usuario.tipo_usuario %></p>
                            <p class="card-text mb-1"><strong>Activo:</strong> <%= usuario.activo ? 'Sí' : 'No' %></p>
                            <p class="card-text mb-3"><strong>Miembro desde:</strong> <%= usuario.fecha_registro || '-' %></p>
                            <button class="btn btn-sm btn-danger w-100" onclick='eliminarUsuario(<%= usuario.id %>, <%- JSON.stringify(usuario.email) %>)'>
                                <i class="fas fa-trash-alt me-2"></i>Eliminar Usuario
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Paginación -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-4">
                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>&limit=<%= limit %>&search=<%= qSearch %>&tipo=<%= qTipo %>&activo=<%= qActivo %>">Anterior</a>
                </li>
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>&limit=<%= limit %>&search=<%= qSearch %>&tipo=<%= qTipo %>&activo=<%= qActivo %>"><%= i %></a>
                    </li>
                <% } %>
                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= currentPage + 1 %>&limit=<%= limit %>&search=<%= qSearch %>&tipo=<%= qTipo %>&activo=<%= qActivo %>">Siguiente</a>
                </li>
            </ul>
        </nav>

    <% } else { %>
        <div class="alert alert-info mt-4">No hay usuarios registrados.</div>
    <% } %>
    </div>
  </div>
</div>

<%- include('../partials/admin-mobile-nav', { user: user, currentPath: path }) %>

<script>
  function eliminarUsuario(id, email) {
    if (!confirm(`¿Seguro que deseas eliminar al usuario ${email}? Esta acción no se puede deshacer.`)) return;
    fetch(`/admin/usuarios/${id}/eliminar`, { method: 'DELETE' })
      .then(r => r.json())
      .then(data => {
        if (data && data.success !== false) {
          alert('Usuario eliminado correctamente');
          location.reload();
        } else {
          alert(data.message || 'Error eliminando el usuario');
        }
      })
      .catch(err => {
        console.error(err);
        alert('Error eliminando el usuario');
      });
  }
</script>

<%- include('../partials/footer') %>
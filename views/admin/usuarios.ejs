<div class="admin-layout">
  <%- include('partials/sidebar') %>
  <div class="admin-content p-4">
    <h1>Gestión de Usuarios</h1>
    <p>Aquí se gestionarán los usuarios del sistema.</p>

    <% if (usuarios && usuarios.length > 0) { %>
        <!-- Vista de tabla para pantallas grandes -->
        <div class="table-responsive d-none d-md-block">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Ciudad</th>
                        <th>Tipo</th>
                        <th>Activo</th>
                        <th>Fecha Registro</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% usuarios.forEach(function(usuario) { %>
                        <tr>
                            <td><%= usuario.id %></td>
                            <td><%= usuario.nombre %></td>
                            <td><%= usuario.apellido %></td>
                            <td><%= usuario.email %></td>
                            <td><%= usuario.telefono || '-' %></td>
                            <td><%= usuario.ciudad %></td>
                            <td><%= usuario.tipo_usuario %></td>
                            <td><%= usuario.activo ? 'Sí' : 'No' %></td>
                            <td><%= usuario.fecha_registro || '-' %></td>
                            <td>
                                <button class="btn btn-sm btn-danger" onclick="eliminarUsuario(<%= usuario.id %>, '<%= usuario.email %>')">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Vista de tarjetas para móviles -->
        <div class="row d-md-none">
            <% usuarios.forEach(function(usuario) { %>
                <div class="col-12 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-1"><%= usuario.nombre %> <%= usuario.apellido %></h5>
                            <h6 class="card-subtitle mb-2 text-muted"><%= usuario.email %></h6>
                            <p class="card-text mb-1"><strong>ID:</strong> <%= usuario.id %></p>
                            <p class="card-text mb-1"><strong>Teléfono:</strong> <%= usuario.telefono || '-' %></p>
                            <p class="card-text mb-1"><strong>Ciudad:</strong> <%= usuario.ciudad || '-' %></p>
                            <p class="card-text mb-1"><strong>Tipo:</strong> <%= usuario.tipo_usuario %></p>
                            <p class="card-text mb-1"><strong>Activo:</strong> <%= usuario.activo ? 'Sí' : 'No' %></p>
                            <p class="card-text mb-3"><strong>Miembro desde:</strong> <%= usuario.fecha_registro || '-' %></p>
                            <button class="btn btn-sm btn-danger w-100" onclick="eliminarUsuario(<%= usuario.id %>, '<%= usuario.email %>')">
                                <i class="fas fa-trash-alt me-2"></i>Eliminar Usuario
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="alert alert-info mt-4">No hay usuarios registrados.</div>
    <% } %>
  </div>
</div>
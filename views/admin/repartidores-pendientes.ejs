<%- include('../partials/header') %>

<div class="admin-layout">
    <%- include('partials/sidebar', { activePage: 'repartidores_pendientes' }) %>

    <div class="admin-content">
        <div class="admin-topbar bg-white shadow-sm px-4 py-3 d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0">Solicitudes de Repartidores Independientes</h5>
                <small class="text-muted">Aprobar o rechazar nuevas solicitudes</small>
            </div>
        </div>

        <div class="p-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <% if (repartidores && repartidores.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Nombre Completo</th>
                                        <th>Email</th>
                                        <th>Teléfono</th>
                                        <th>Fecha de Solicitud</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% repartidores.forEach(repartidor => { %>
                                        <tr>
                                            <td><%= repartidor.nombre %> <%= repartidor.apellido %></td>
                                            <td><%= repartidor.email %></td>
                                            <td><%= repartidor.telefono || 'No especificado' %></td>
                                            <td><%= new Date(repartidor.fecha_registro).toLocaleDateString('es-AR') %></td>
                                            <td class="text-end">
                                                <form action="/admin/repartidores/<%= repartidor.id %>/aprobar" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-success">Aprobar</button>
                                                </form>
                                                <form action="/admin/repartidores/<%= repartidor.id %>/rechazar" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-danger">Rechazar</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h4>No hay solicitudes pendientes</h4>
                            <p class="text-muted">Buen trabajo, estás al día.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

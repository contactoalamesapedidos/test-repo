<script>
// Review receipt
function revisarComprobante(comprobanteId, accion) {
    document.getElementById('comprobante_id').value = comprobanteId;
    document.getElementById('accion_revision').value = accion;
    document.getElementById('comentarios').value = '';
    
    if (accion === 'aprobar') {
        document.getElementById('modalRevisarTitulo').innerHTML = '<i class="fas fa-check-circle me-2 text-success"></i>Aprobar Comprobante';
        document.getElementById('mensaje_accion').textContent = 'El comprobante será marcado como aprobado y el cobro como pagado.';
        document.getElementById('btnConfirmarRevision').className = 'btn btn-success';
        document.getElementById('btnConfirmarRevision').innerHTML = '<i class="fas fa-check me-1"></i>Aprobar';
    } else {
        document.getElementById('modalRevisarTitulo').innerHTML = '<i class="fas fa-times-circle me-2 text-danger"></i>Rechazar Comprobante';
        document.getElementById('mensaje_accion').textContent = 'El comprobante será marcado como rechazado. Es recomendable agregar comentarios explicando el motivo.';
        document.getElementById('btnConfirmarRevision').className = 'btn btn-danger';
        document.getElementById('btnConfirmarRevision').innerHTML = '<i class="fas fa-times me-1"></i>Rechazar';
    }
    
    new bootstrap.Modal(document.getElementById('modalRevisarComprobante')).show();
}

// Confirm review
function confirmarRevision() {
    const form = document.getElementById('formRevisarComprobante');
    const formData = new FormData(form);
    
    const data = {
        accion: formData.get('accion'),
        comentarios: formData.get('comentarios')
    };
    
    const comprobanteId = formData.get('comprobante_id');
    
    fetch(`/admin/comprobantes/${comprobanteId}/revisar`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(data)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showNotification(data.message, 'success');
            bootstrap.Modal.getInstance(document.getElementById('modalRevisarComprobante')).hide();
            setTimeout(() => location.reload(), 1500);
        } else {
            showNotification(data.message || 'Error procesando la revisión', 'error');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showNotification('Error procesando la revisión', 'error');
    });
}

// Approve all pending
function aprobarPendientes() {
    const pendientes = <%= comprobantes.filter(c => c.estado === 'pendiente').length %>;
    
    if (pendientes === 0) {
        showNotification('No hay comprobantes pendientes', 'info');
        return;
    }
    
    if (confirm(`¿Aprobar automáticamente todos los ${pendientes} comprobantes pendientes?`)) {
        fetch('/admin/comprobantes/aprobar-pendientes', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showNotification(`${data.aprobados} comprobantes aprobados exitosamente`, 'success');
                setTimeout(() => location.reload(), 1500);
            } else {
                showNotification(data.message || 'Error aprobando comprobantes', 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showNotification('Error aprobando comprobantes', 'error');
        });
    }
}

// Export receipts
function exportarComprobantes() {
    const params = new URLSearchParams(window.location.search);
    params.set('export', 'csv');
    window.open(`/admin/comprobantes/export?${params.toString()}`, '_blank');
}

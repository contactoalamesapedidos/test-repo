<!-- Admin Sidebar -->
<div class="admin-layout">
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <div class="admin-content">
        <!-- Top Bar -->
        <div class="admin-topbar bg-white shadow-sm px-4 py-3 d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0">Gestión de Comprobantes de Pago</h5>
                <small class="text-muted">Revisa y aprueba los comprobantes de pago de restaurantes</small>
            </div>
            <div class="d-flex align-items-center gap-2">
                <span class="badge bg-warning fs-6">
                    <%= comprobantes.filter(c => c.estado === 'pendiente').length %> pendientes
                </span>
                <a href="/admin" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>

        <!-- Content -->
        <div class="p-4">
            <!-- Filters -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <form method="GET" action="/admin/comprobantes" class="row g-3">
                        <div class="col-md-3">
                            <label for="estado" class="form-label">Estado</label>
                            <select class="form-select" id="estado" name="estado">
                                <option value="">Todos los estados</option>
                                <option value="pendiente" <%= filtros.estado === 'pendiente' ? 'selected' : '' %>>Pendiente</option>
                                <option value="aprobado" <%= filtros.estado === 'aprobado' ? 'selected' : '' %>>Aprobado</option>
                                <option value="rechazado" <%= filtros.estado === 'rechazado' ? 'selected' : '' %>>Rechazado</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="restaurante" class="form-label">Restaurante</label>
                            <select class="form-select" id="restaurante" name="restaurante">
                                <option value="">Todos los restaurantes</option>
                                <% restaurantes.forEach(rest => { %>
                                    <option value="<%= rest.id %>" <%= filtros.restaurante == rest.id ? 'selected' : '' %>>
                                        <%= rest.nombre %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="fecha_desde" class="form-label">Desde</label>
                            <input type="date" class="form-control" id="fecha_desde" name="fecha_desde" 
                                   value="<%= filtros.fecha_desde %>">
                        </div>
                        <div class="col-md-2">
                            <label for="fecha_hasta" class="form-label">Hasta</label>
                            <input type="date" class="form-control" id="fecha_hasta" name="fecha_hasta" 
                                   value="<%= filtros.fecha_hasta %>">
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search me-1"></i>Filtrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Summary Stats -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card border-0 bg-warning text-white">
                        <div class="card-body text-center">
                            <h3><%= comprobantes.filter(c => c.estado === 'pendiente').length %></h3>
                            <small>Pendientes</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 bg-success text-white">
                        <div class="card-body text-center">
                            <h3><%= comprobantes.filter(c => c.estado === 'aprobado').length %></h3>
                            <small>Aprobados</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 bg-danger text-white">
                        <div class="card-body text-center">
                            <h3><%= comprobantes.filter(c => c.estado === 'rechazado').length %></h3>
                            <small>Rechazados</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 bg-info text-white">
                        <div class="card-body text-center">
                            <h3>$<%= Math.round(comprobantes.filter(c => c.estado === 'aprobado').reduce((sum, c) => sum + parseFloat(c.monto_pagado || 0), 0)).toLocaleString() %></h3>
                            <small>Total Aprobado</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Receipts Table -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="fas fa-receipt me-2"></i>
                        Lista de Comprobantes
                    </h6>
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-outline-success" onclick="aprobarPendientes()">
                            <i class="fas fa-check me-1"></i>Aprobar Pendientes
                        </button>
                        <button class="btn btn-sm btn-outline-primary" onclick="exportarComprobantes()">
                            <i class="fas fa-download me-1"></i>Exportar
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <% if (comprobantes.length > 0) { %>
                        <!-- Vista de tabla para pantallas grandes -->
                        <div class="table-responsive d-none d-md-block">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Restaurante</th>
                                        <th>Período de Cobro</th>
                                        <th>Método de Pago</th>
                                        <th>Monto</th>
                                        <th>Fecha Subida</th>
                                        <th>Estado</th>
                                        <th>Comprobante</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% comprobantes.forEach(comprobante => { %>
                                        <tr class="<%= comprobante.estado === 'aprobado' ? 'table-success' : comprobante.estado === 'rechazado' ? 'table-danger' : 'table-warning' %>">
                                            <td>
                                                <div class="fw-bold"><%= comprobante.restaurante_nombre %></div>
                                                <small class="text-muted">ID: <%= comprobante.restaurante_id %></small>
                                            </td>
                                            <td>
                                                <div class="small">
                                                    <strong>Período:</strong><br>
                                                    <%= new Date(comprobante.semana_inicio).toLocaleDateString('es-AR') %><br>
                                                    al <%= new Date(comprobante.semana_fin).toLocaleDateString('es-AR') %><br>
                                                    <span class="text-muted">
                                                        Ventas: $<%= comprobante.ventas_brutas.toLocaleString() %><br>
                                                        Comisión: $<%= comprobante.monto_comision.toLocaleString() %>
                                                    </span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="text-capitalize">
                                                    <strong><%= comprobante.metodo_pago.replace('_', ' ') %></strong>
                                                    <% if (comprobante.referencia_pago) { %>
                                                        <br><small class="text-muted">
                                                            Ref: <%= comprobante.referencia_pago %>
                                                        </small>
                                                    <% } %>
                                                    <br><small class="text-muted">
                                                        Fecha pago: <%= new Date(comprobante.fecha_pago_declarada).toLocaleDateString('es-AR') %>
                                                    </small>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="text-end">
                                                    <strong class="text-success">
                                                        $<%= comprobante.monto_pagado !== null ? Number(comprobante.monto_pagado).toLocaleString() : '-' %>
                                                    </strong>
                                                    <% if (comprobante.monto_pagado !== null && comprobante.monto_pagado < comprobante.monto_comision) { %>
                                                        <br><small class="text-warning">
                                                            <i class="fas fa-exclamation-triangle"></i>
                                                            Pago parcial
                                                        </small>
                                                    <% } else if (comprobante.monto_pagado !== null && comprobante.monto_pagado > comprobante.monto_comision) { %>
                                                        <br><small class="text-info">
                                                            <i class="fas fa-info-circle"></i>
                                                            Sobrepago
                                                        </small>
                                                    <% } %>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="small">
                                                    <%= new Date(comprobante.fecha_subida).toLocaleDateString('es-AR') %><br>
                                                    <%= new Date(comprobante.fecha_subida).toLocaleTimeString('es-AR', {hour: '2-digit', minute: '2-digit'}) %>
                                                </div>
                                            </td>
                                            <td>
                                                <% if (comprobante.estado === 'pendiente') { %>
                                                    <span class="badge bg-warning">Pendiente</span>
                                                <% } else if (comprobante.estado === 'aprobado') { %>
                                                    <span class="badge bg-success">Aprobado</span>
                                                    <% if (comprobante.fecha_revision) { %>
                                                        <br><small class="text-muted">
                                                            <%= new Date(comprobante.fecha_revision).toLocaleDateString('es-AR') %>
                                                        </small>
                                                    <% } %>
                                                    <% if (comprobante.admin_nombre) { %>
                                                        <br><small class="text-muted">
                                                            por <%= comprobante.admin_nombre %>
                                                        </small>
                                                    <% } %>
                                                <% } else if (comprobante.estado === 'rechazado') { %>
                                                    <span class="badge bg-danger">Rechazado</span>
                                                    <% if (comprobante.fecha_revision) { %>
                                                        <br><small class="text-muted">
                                                            <%= new Date(comprobante.fecha_revision).toLocaleDateString('es-AR') %>
                                                        </small>
                                                    <% } %>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (comprobante.archivo_comprobante) { %>
                                                    <a href="/uploads/comprobantes/<%= comprobante.archivo_comprobante %>" 
                                                       target="_blank" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-file-alt me-1"></i>Ver
                                                    </a>
                                                <% } else { %>
                                                    <span class="text-muted">Sin archivo</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (comprobante.estado === 'pendiente') { %>
                                                    <div class="btn-group">
                                                        <button class="btn btn-sm btn-success" 
                                                                onclick="revisarComprobante(<%= comprobante.id %>, 'aprobar')">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-danger" 
                                                                onclick="revisarComprobante(<%= comprobante.id %>, 'rechazar')">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </div>
                                                <% } else { %>
                                                    <button class="btn btn-sm btn-outline-secondary" 
                                                            onclick="verDetalleComprobante(<%= comprobante.id %>)">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                <% } %>
                                            </td>
                                        </tr>
                                        <% if (comprobante.comentarios_restaurante) { %>
                                            <tr class="table-light">
                                                <td colspan="8">
                                                    <small>
                                                        <strong>Comentario del restaurante:</strong> 
                                                        <%= comprobante.comentarios_restaurante %>
                                                    </small>
                                                </td>
                                            </tr>
                                        <% } %>
                                        <% if (comprobante.comentarios_admin) { %>
                                            <tr class="table-light">
                                                <td colspan="8">
                                                    <small>
                                                        <strong>Comentario del administrador:</strong> 
                                                        <%= comprobante.comentarios_admin %>
                                                    </small>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Vista de tarjetas para móviles -->
                        <div class="d-md-none row g-3 p-3">
                            <% comprobantes.forEach(comprobante => { %>
                                <div class="col-12 mb-3">
                                    <div class="card shadow-sm <%= comprobante.estado === 'aprobado' ? 'border-success' : comprobante.estado === 'rechazado' ? 'border-danger' : 'border-warning' %>">
                                        <div class="card-body">
                                            <h5 class="card-title mb-1"><%= comprobante.restaurante_nombre %></h5>
                                            <h6 class="card-subtitle mb-2 text-muted">ID Restaurante: <%= comprobante.restaurante_id %></h6>
                                            <p class="card-text mb-1">
                                                <strong>Período:</strong> <%= new Date(comprobante.semana_inicio).toLocaleDateString('es-AR') %> al <%= new Date(comprobante.semana_fin).toLocaleDateString('es-AR') %>
                                            </p>
                                            <p class="card-text mb-1">
                                                <strong>Ventas Brutas:</strong> $<%= comprobante.ventas_brutas.toLocaleString() %><br>
                                                <strong>Comisión:</strong> $<%= comprobante.monto_comision.toLocaleString() %>
                                            </p>
                                            <p class="card-text mb-1">
                                                <strong>Método de Pago:</strong> <span class="text-capitalize"><%= comprobante.metodo_pago.replace('_', ' ') %></span>
                                                <% if (comprobante.referencia_pago) { %>
                                                    <br><small class="text-muted">Ref: <%= comprobante.referencia_pago %></small>
                                                <% } %>
                                                <br><small class="text-muted">Fecha pago: <%= new Date(comprobante.fecha_pago_declarada).toLocaleDateString('es-AR') %></small>
                                            </p>
                                            <p class="card-text mb-1">
                                                <strong>Monto:</strong> <strong class="text-success">$<%= comprobante.monto_pagado !== null ? Number(comprobante.monto_pagado).toLocaleString() : '-' %></strong>
                                                <% if (comprobante.monto_pagado !== null && comprobante.monto_pagado < comprobante.monto_comision) { %>
                                                    <span class="text-warning"><i class="fas fa-exclamation-triangle"></i> Pago parcial</span>
                                                <% } else if (comprobante.monto_pagado !== null && comprobante.monto_pagado > comprobante.monto_comision) { %>
                                                    <span class="text-info"><i class="fas fa-info-circle"></i> Sobrepago</span>
                                                <% } %>
                                            </p>
                                            <p class="card-text mb-1">
                                                <strong>Fecha Subida:</strong> <%= new Date(comprobante.fecha_subida).toLocaleDateString('es-AR') %> <%= new Date(comprobante.fecha_subida).toLocaleTimeString('es-AR', {hour: '2-digit', minute: '2-digit'}) %>
                                            </p>
                                            <p class="card-text mb-3">
                                                <strong>Estado:</strong> 
                                                <% if (comprobante.estado === 'pendiente') { %>
                                                    <span class="badge bg-warning">Pendiente</span>
                                                <% } else if (comprobante.estado === 'aprobado') { %>
                                                    <span class="badge bg-success">Aprobado</span>
                                                    <% if (comprobante.fecha_revision) { %>
                                                        <br><small class="text-muted">(<%= new Date(comprobante.fecha_revision).toLocaleDateString('es-AR') %>)</small>
                                                    <% } %>
                                                    <% if (comprobante.admin_nombre) { %>
                                                        <br><small class="text-muted">por <%= comprobante.admin_nombre %></small>
                                                    <% } %>
                                                <% } else if (comprobante.estado === 'rechazado') { %>
                                                    <span class="badge bg-danger">Rechazado</span>
                                                    <% if (comprobante.fecha_revision) { %>
                                                        <br><small class="text-muted">(<%= new Date(comprobante.fecha_revision).toLocaleDateString('es-AR') %>)</small>
                                                    <% } %>
                                                <% } %>
                                            </p>
                                            <div class="d-grid gap-2">
                                                <% if (comprobante.archivo_comprobante) { %>
                                                    <a href="/uploads/comprobantes/<%= comprobante.archivo_comprobante %>" 
                                                       target="_blank" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-file-alt me-2"></i>Ver Comprobante
                                                    </a>
                                                <% } else { %>
                                                    <button class="btn btn-sm btn-outline-secondary" disabled>
                                                        <i class="fas fa-file-alt me-2"></i>Sin Comprobante
                                                    </button>
                                                <% } %>
                                                <% if (comprobante.estado === 'pendiente') { %>
                                                    <button class="btn btn-sm btn-success" 
                                                            onclick="revisarComprobante(<%= comprobante.id %>, 'aprobar')">
                                                        <i class="fas fa-check me-2"></i>Aprobar
                                                    </button>
                                                    <button class="btn btn-sm btn-danger" 
                                                            onclick="revisarComprobante(<%= comprobante.id %>, 'rechazar')">
                                                        <i class="fas fa-times me-2"></i>Rechazar
                                                    </button>
                                                <% } else { %>
                                                    <button class="btn btn-sm btn-outline-secondary" 
                                                            onclick="verDetalleComprobante(<%= comprobante.id %>)">
                                                        <i class="fas fa-eye me-2"></i>Ver Detalle
                                                    </button>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>

                        <!-- Paginación -->
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mt-4">
                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>&estado=<%= filtros.estado %>&restaurante=<%= filtros.restaurante %>&fecha_desde=<%= filtros.fecha_desde %>&fecha_hasta=<%= filtros.fecha_hasta %>">Anterior</a>
                                </li>
                                <% for (let i = 1; i <= totalPages; i++) { %>
                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %>&estado=<%= filtros.estado %>&restaurante=<%= filtros.restaurante %>&fecha_desde=<%= filtros.fecha_desde %>&fecha_hasta=<%= filtros.fecha_hasta %>"><%= i %></a>
                                    </li>
                                <% } %>
                                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>&estado=<%= filtros.estado %>&restaurante=<%= filtros.restaurante %>&fecha_desde=<%= filtros.fecha_desde %>&fecha_hasta=<%= filtros.fecha_hasta %>">Siguiente</a>
                                </li>
                            </ul>
                        </nav>

                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                            <h5>No se encontraron comprobantes</h5>
                            <p class="text-muted">Intenta cambiar los filtros de búsqueda</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Revisar Comprobante -->
<div class="modal fade" id="modalRevisarComprobante" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalRevisarTitulo">
                    <i class="fas fa-clipboard-check me-2"></i>Revisar Comprobante
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="formRevisarComprobante">
                    <input type="hidden" id="comprobante_id" name="comprobante_id">
                    <input type="hidden" id="accion_revision" name="accion">
                    
                    <div class="mb-3">
                        <label for="comentarios" class="form-label">Comentarios (opcional)</label>
                        <textarea class="form-control" id="comentarios" name="comentarios" 
                                  rows="3" placeholder="Agrega comentarios sobre la revisión..."></textarea>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <span id="mensaje_accion"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn" id="btnConfirmarRevision" onclick="confirmarRevision()">
                    <i class="fas fa-check me-1"></i>Confirmar
                </button>
            </div>
        </div>
    </div>
</div>


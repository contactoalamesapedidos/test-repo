<div class="container mt-4" style="position: relative; z-index: 1;">
    <div class="row">
        <!-- Order Summary -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header text-white" style="background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);">
                    <h5 class="mb-0">
                        <i class="fas fa-shopping-cart me-2"></i>
                        Confirmar Pedido
                    </h5>
                </div>
                <div class="card-body">
                    <% if (cart && cart.length > 0) { %>
                        <!-- Restaurant Info -->
                        <div class="restaurant-info mb-4 p-3 bg-light rounded">
                            <div class="d-flex align-items-center">
                                <img src="<%= restaurant.imagen_logo ? '/uploads/' + restaurant.imagen_logo : '/images/defaults/restaurant-logo-default.svg' %>"
                                     alt="<%= restaurant.nombre %>"
                                     class="img-fluid rounded"
                                     style="max-width: 100px; max-height: 100px; object-fit: cover;"
                                     onerror="this.src='/images/defaults/restaurant-logo-default.svg'">
                                <div>
                                    <h5 class="mb-1"><%= restaurant.nombre %></h5>
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>
                                        Tiempo estimado: <%= restaurant.tiempo_entrega_min %> - <%= restaurant.tiempo_entrega_max %> min
                                    </small>
                                </div>
                            </div>
                        </div>

                        <!-- Order Items -->
                        <div class="order-items">
                            <h6 class="mb-3">Productos en tu pedido:</h6>
                            <% cart.forEach(item => { %>
                                <div class="order-item d-flex justify-content-between align-items-center mb-3 p-3 border rounded">
                                    <div class="d-flex align-items-center">
                                        <img src="<%= item.imagen ? (item.imagen.startsWith('/uploads/') ? item.imagen : '/uploads/' + item.imagen) : '/images/no-image.png' %>" 
                                             alt="<%= item.name %>" 
                                             class="rounded me-3" width="50" height="50"
                                             onerror="this.onerror=null;this.src='/images/no-image.png';">
                                        <div>
                                            <h6 class="mb-1"><%= item.name %></h6>
                                            <small class="text-muted">Cantidad: <%= item.quantity %></small>
                                            <% if (item.specialInstructions) { %>
                                                <small class="text-muted d-block">
                                                    <i class="fas fa-comment-alt me-1"></i>
                                                    <%= item.specialInstructions %>
                                                </small>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <div class="fw-bold">$<%= (typeof ((item.price || item.precio || 0) * item.quantity) === 'number' && !isNaN((item.price || item.precio || 0) * item.quantity)) ? ((item.price || item.precio || 0) * item.quantity).toFixed(2) : '0.00' %></div>
                                        <small class="text-muted">$<%= (typeof (item.price || item.precio || 0) === 'number' && !isNaN(item.price || item.precio || 0)) ? (item.price || item.precio || 0).toFixed(2) : '0.00' %> c/u</small>
                                    </div>
                                </div>
                            <% }) %>
                        </div>

                        <!-- Delivery Address -->
                        <div class="delivery-address mt-4">
                            <h6 class="mb-3">Dirección de entrega:</h6>
                            <div class="form-group">
                                <input type="text" class="form-control address-autocomplete" 
                                       id="deliveryAddress" name="deliveryAddress"
                                       placeholder="<%= user.direccion_principal ? user.direccion_principal : 'Ingresa tu dirección completa' %>"
                                       value="<%= user.direccion_principal || '' %>" required>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Asegúrate de incluir número, piso y departamento si corresponde
                                </div>
                                <div class="invalid-feedback" id="deliveryAddressError"></div>
                            </div>

                            
                            <!-- Checkbox para mejor precisión -->
                            <div class="form-check mt-3">
                                <input class="form-check-input" type="checkbox" id="betterLocationCheckbox">
                                <label class="form-check-label" for="betterLocationCheckbox">
                                    Utilizar mejor precisión de ubicación
                                </label>
                            </div>
                            <!-- Mapa Leaflet oculto por defecto -->
                            <div id="leafletMapContainer" style="display:none; margin-top:15px;">
                                <div style="position:relative;">
                                    <div id="leafletMap" style="height:300px; border-radius:12px; border:1px solid #ccc;"></div>
                                    <div id="mapMarkerCenter" style="position:absolute;top:50%;left:50%;transform:translate(-50%,-100%);pointer-events:none;z-index:500;">
                                        <img src="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/images/marker-icon.png" style="width:32px;height:48px;filter:drop-shadow(0 2px 4px rgba(0,0,0,0.2));">
                                    </div>
                                </div>
                                <button type="button" class="btn btn-success mt-2" id="confirmMapLocationBtn">Confirmar ubicación</button>
                                <input type="hidden" id="latitude" name="latitude">
                                <input type="hidden" id="longitude" name="longitude">
                                <div class="form-text mt-2">
                                    Mueve el mapa para ajustar la ubicación y presiona "Confirmar ubicación".
                                </div>
                            </div>
                        </div>

                        <!-- Special Instructions -->
                        <div class="special-instructions mt-4">
                            <h6 class="mb-3">Instrucciones especiales (opcional):</h6>
                            <textarea class="form-control" id="specialInstructions" name="specialInstructions" 
                                      rows="3" placeholder="Ej: Sin cebolla, sin sal, etc."></textarea>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                            <h5>Tu carrito está vacío</h5>
                            <p class="text-muted">Agrega algunos productos para continuar</p>
                            <a href="/" class="btn" style="background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%); color: white; border: none;">Explorar Restaurantes</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Payment Summary -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm sticky-top">
                <div class="card-header bg-light">
                    <h6 class="mb-0">Resumen del Pedido</h6>
                </div>
                <div class="card-body">
                    <% if (cart && cart.length > 0) { %>
                        <!-- Price Breakdown -->
                        <div class="price-breakdown">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal:</span>
                                <span>$<%= (typeof subtotal === 'number' && !isNaN(subtotal)) ? subtotal.toFixed(2) : '0.00' %></span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Delivery:</span>
                                <span><%= (typeof deliveryFee === 'number' && !isNaN(deliveryFee) && deliveryFee > 0) ? `$${deliveryFee.toFixed(2)}` : 'Gratis' %></span>
                            </div>
                            <% if (restaurant.descuento_delivery > 0) { %>
                            <div class="d-flex justify-content-between mb-2 text-success">
                                <span>Descuento:</span>
                                <span>-$<%= (typeof restaurant.descuento_delivery === 'number' && !isNaN(restaurant.descuento_delivery)) ? restaurant.descuento_delivery.toFixed(2) : '0.00' %></span>
                            </div>
                            <% } %>
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <strong>Total:</strong>
                                <strong>$<%= (typeof total === 'number' && !isNaN(total)) ? total.toFixed(2) : '0.00' %></strong>
                            </div>
                        </div>

                        <!-- Payment Methods -->
                        <div class="payment-methods mb-4">
                            <h6 class="mb-3">Método de pago:</h6>
                            
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="paymentMethod" 
                                       id="efectivo" value="efectivo" checked>
                                <label class="form-check-label" for="efectivo">
                                    <i class="fas fa-money-bill-wave text-success me-2"></i>
                                    Efectivo <span class="badge bg-success">5% descuento</span>
                                </label>
                            </div>
                            
                            <% if (restaurant.datos_transferencia_cbu && restaurant.datos_transferencia_alias) { %>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="paymentMethod" 
                                       id="transferencia" value="transferencia">
                                <label class="form-check-label" for="transferencia">
                                    <i class="fas fa-university text-primary me-2"></i>
                                    Transferencia Bancaria <span class="badge bg-success">5% descuento</span>
                                </label>
                            </div>
                            <% } %>

                            <% if (restaurant.mp_access_token && restaurant.mp_user_id) { %>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="paymentMethod" 
                                       id="mercadopago" value="mercadopago">
                                <label class="form-check-label" for="mercadopago">
                                    <i class="fas fa-credit-card text-info me-2"></i>
                                    Mercado Pago
                                </label>
                            </div>
                            <% } %>
                        </div>

                        <!-- Order Button -->
                        <button class="btn w-100 btn-lg" id="confirmOrderBtn" style="background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%); color: white; border: none;">
                            <i class="fas fa-check me-2"></i>
                            Confirmar Pedido
                        </button>

                        <!-- Security Info -->
                        <div class="security-info mt-3">
                            <small class="text-muted d-flex align-items-center">
                                <i class="fas fa-shield-alt text-success me-2"></i>
                                Pago 100% seguro y protegido
                            </small>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<script id="cart-data" type="application/json">
    <%- JSON.stringify({ cart, subtotal, deliveryFee, total, user }) %>
</script>

<!-- Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin=""/>
<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>


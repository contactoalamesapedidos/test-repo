<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-list me-2"></i>
                    Mis Pedidos
                </h2>
            </div>

            <!-- Filtros -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <form id="filterForm" class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label for="status" class="form-label">Estado</label>
                            <select class="form-select" id="status" name="status">
                                <option value="">Todos los estados</option>
                                <option value="pendiente">Pendiente</option>
                                <option value="preparando">Preparando</option>
                                <option value="en_camino">En camino</option>
                                <option value="entregado">Entregado</option>
                                <option value="cancelado">Cancelado</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="date" class="form-label">Fecha</label>
                            <input type="date" class="form-control" id="date" name="date">
                        </div>
                        <div class="col-md-4">
                            <label for="search" class="form-label">Buscar</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   placeholder="Número de pedido o restaurante">
                        </div>
                        <div class="col-12 col-md-auto mt-2 mt-md-0">
                            <button type="button" class="btn btn-outline-secondary w-100" onclick="clearFilters()">
                                <i class="fas fa-eraser me-1"></i> Limpiar filtros
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info de paginación -->
            <div class="mb-2 text-end text-muted small">
                Página <%= currentPage %> de <%= totalPages %> &mdash; Total de pedidos: <%= totalOrders %>
            </div>

            <!-- Lista de Pedidos -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <% if (orders && orders.length > 0) { %>
                        <!-- Tabla solo visible en desktop -->
                        <div class="table-responsive d-none d-md-block">
                            <table class="table table-hover mb-0 table-mis-pedidos">
                                <thead class="table-light">
                                    <tr>
                                        <th>Pedido</th>
                                        <th style="width: 25%;">Restaurante</th>
                                        <th>Total</th>
                                        <th>Estado</th>
                                        <th>Fecha</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% orders.forEach(order => { %>
                                        <tr>
                                            <td><strong>#<%= order.numero_pedido %></strong></td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <% if (order.imagen_logo) { %>
                                                        <img src="/uploads/<%= order.imagen_logo %>" alt="<%= order.restaurante_nombre %>" class="rounded me-2" width="32" height="32">
                                                    <% } %>
                                                    <%= order.restaurante_nombre %>
                                                </div>
                                            </td>
                                            <td><strong>$<%= parseFloat(order.total).toFixed(2) %></strong></td>
                                            <td>
                                                <span class="badge bg-<%= order.estado === 'pendiente' || order.estado === 'pendiente_pago' ? 'secondary' :
                                                                  order.estado === 'confirmado' ? 'info' :
                                                                  order.estado === 'preparando' ? 'primary' :
                                                                  order.estado === 'listo' ? 'success' :
                                                                  order.estado === 'en_camino' ? 'warning' :
                                                                  order.estado === 'entregado' ? 'success' : 'danger' %> p-2">
                                                    <% if (order.estado === 'confirmado') { %>
                                                        Pago confirmado
                                                    <% } else { %>
                                                        <%= order.estado.charAt(0).toUpperCase() + order.estado.slice(1).replace('_', ' ') %>
                                                    <% } %>
                                                </span>
                                            </td>
                                            <td><%= new Date(order.fecha_pedido).toLocaleString('es-AR') %></td>
                                            <td>
                                                <a href="/orders/<%= order.id %>" class="btn btn-sm btn-outline-primary" title="Ver detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <% if (['pendiente', 'confirmado'].includes(order.estado)) { %>
                                                    <button class="btn btn-sm btn-outline-danger ms-1" onclick="cancelOrder('<%= order.id %>')" title="Cancelar pedido">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                <% } %>
                                                <% 
                                                  const within16h = order.fecha_entrega ? (new Date() - new Date(order.fecha_entrega)) <= (16 * 60 * 60 * 1000) : false;
                                                %>
                                                <% if (order.estado === 'entregado' && within16h) { %>
                                                    <button class="btn btn-sm btn-outline-warning ms-1 review-btn" data-order-id="<%= order.id %>" title="Dejar reseña">
                                                        <i class="fas fa-star"></i>
                                                    </button>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <!-- Cards horizontales solo en mobile -->
                        <div class="orders-cards-list d-md-none mt-2">
                          <% orders.forEach(order => { %>
                            <div class="order-card-mobile">
                              <% if (order.imagen_logo) { %>
                                <img src="/uploads/<%= order.imagen_logo %>" alt="<%= order.restaurante_nombre %>" class="order-logo">
                              <% } else { %>
                                <div class="order-logo d-flex align-items-center justify-content-center bg-light text-muted" style="font-size:1.5em;">
                                  <i class="fas fa-store"></i>
                                </div>
                              <% } %>
                              <div class="order-info flex-grow-1" style="min-width:0;">
                                <div class="order-title">#<%= order.numero_pedido %> - $<%= parseFloat(order.total).toFixed(2) %></div>
                                <div class="order-restaurant"><%= order.restaurante_nombre %></div>
                                <div class="order-meta">
                                  <span><%= new Date(order.fecha_pedido).toLocaleString('es-AR') %></span>
                                </div>
                              </div>
                              <div class="order-status-actions d-flex flex-column align-items-end justify-content-between ms-2" style="min-width:110px;">
                                <span class="order-badge badge bg-<%= order.estado === 'pendiente' || order.estado === 'pendiente_pago' ? 'secondary' :
                                  order.estado === 'confirmado' ? 'info' :
                                  order.estado === 'preparando' ? 'primary' :
                                  order.estado === 'listo' ? 'success' :
                                  order.estado === 'en_camino' ? 'warning' :
                                  order.estado === 'entregado' ? 'success' : 'danger' %> p-2 mb-1">
                                  <%= order.estado.charAt(0).toUpperCase() + order.estado.slice(1).replace('_', ' ') %>
                                </span>
                                <div class="order-actions d-flex flex-column align-items-end gap-1 mt-1">
                                  <a href="/orders/<%= order.id %>" class="btn btn-sm btn-outline-primary w-100" title="Ver detalles">
                                    <i class="fas fa-eye me-1"></i>
                                  </a>
                                  <% if (["pendiente", "confirmado"].includes(order.estado)) { %>
                                    <button class="btn btn-sm btn-outline-danger w-100" onclick="cancelOrder('<%= order.id %>')" title="Cancelar pedido">
                                      <i class="fas fa-times"></i>
                                    </button>
                                  <% } %>
                                  <% 
                                    const within16hMobile = order.fecha_entrega ? (new Date() - new Date(order.fecha_entrega)) <= (16 * 60 * 60 * 1000) : false;
                                  %>
                                  <% if (order.estado === 'entregado' && within16hMobile) { %>
                                    <button class="btn btn-sm btn-outline-warning w-100 review-btn" data-order-id="<%= order.id %>" title="Dejar reseña">
                                      <i class="fas fa-star"></i>
                                    </button>
                                  <% } %>
                                </div>
                              </div>
                            </div>
                          <% }); %>
                        </div>
                        <% if (totalPages > 1) { %>
                        <nav aria-label="Paginación de pedidos" class="my-4">
                          <ul class="pagination justify-content-center">
                            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                              <a class="page-link" href="<%= getPageUrl(currentPage - 1) %>" tabindex="-1">Anterior</a>
                            </li>
                            <% for(let i = 1; i <= totalPages; i++) { %>
                              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="<%= getPageUrl(i) %>"><%= i %></a>
                              </li>
                            <% } %>
                            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                              <a class="page-link" href="<%= getPageUrl(currentPage + 1) %>">Siguiente</a>
                            </li>
                          </ul>
                        </nav>
                        <% } %>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-cart text-muted fs-1 mb-3"></i>
                            <p class="text-muted">No tienes pedidos para mostrar. Si crees que esto es un error, por favor contacta al soporte.</p>
                            <a href="/restaurants" class="btn btn-primary">
                                <i class="fas fa-utensils me-2"></i>
                                Ver Restaurantes
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Cancelación -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancelar Pedido</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="cancelForm">
                    <input type="hidden" id="cancelOrderId" name="orderId">
                    <div class="mb-3">
                        <label for="cancelReason" class="form-label">Motivo de cancelación</label>
                        <textarea class="form-control" id="cancelReason" name="motivo" 
                                  rows="3" required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-danger" onclick="confirmCancel()">
                    Confirmar Cancelación
                </button>
            </div>
        </div>
    </div>
</div>

<script>
// Función para aplicar filtros
function applyFilters() {
    const form = document.getElementById('filterForm');
    const formData = new FormData(form);
    const params = new URLSearchParams(formData);
    window.location.href = `/orders/history?${params.toString()}`;
}

// Event listeners para filtros
document.getElementById('status').addEventListener('change', applyFilters);
document.getElementById('date').addEventListener('change', applyFilters);
document.getElementById('search').addEventListener('input', debounce(applyFilters, 500));

// Función para cancelar pedido
function cancelOrder(orderId) {
    document.getElementById('cancelOrderId').value = orderId;
    const modal = new bootstrap.Modal(document.getElementById('cancelModal'));
    modal.show();
}

// Función para confirmar cancelación
async function confirmCancel() {
    const orderId = document.getElementById('cancelOrderId').value;
    const motivo = document.getElementById('cancelReason').value;
    
    if (!motivo.trim()) {
        showNotification('Por favor, ingresa un motivo de cancelación', 'error');
        return;
    }
    
    try {
        const response = await fetch(`/orders/${orderId}/cancel`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ motivo })
        });
        
        const data = await response.json();
        
        if (data.success) {
            showNotification('Pedido cancelado exitosamente', 'success');
            setTimeout(() => window.location.reload(), 1500);
        } else {
            showNotification(data.message || 'Error al cancelar el pedido', 'error');
        }
    } catch (error) {
        showNotification('Error al cancelar el pedido', 'error');
    }
}

// Función debounce para el buscador
function debounce(func, wait) {
    let timeout;
    return function executedFunction(...args) {
        const later = () => {
            clearTimeout(timeout);
            func(...args);
        };
        clearTimeout(timeout);
        timeout = setTimeout(later, wait);
    };
}

// Función para mostrar notificaciones
function showNotification(message, type = 'success') {
    const toast = document.createElement('div');
    toast.className = `toast align-items-center text-white bg-${type} border-0 position-fixed bottom-0 end-0 m-3`;
    toast.setAttribute('role', 'alert');
    toast.setAttribute('aria-live', 'assertive');
    toast.setAttribute('aria-atomic', 'true');
    
    toast.innerHTML = `
        <div class="d-flex">
            <div class="toast-body">
                ${message}
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    `;
    
    document.body.appendChild(toast);
    const bsToast = new bootstrap.Toast(toast);
    bsToast.show();
    
    toast.addEventListener('hidden.bs.toast', () => {
        document.body.removeChild(toast);
    });
}

// Event listeners para botones de reseña
document.addEventListener('DOMContentLoaded', function() {
    // Cargar estado de reseñas disponibles
    loadReviewStatus();
    
    // Event listeners para botones de reseña
    document.querySelectorAll('.review-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const orderId = this.getAttribute('data-order-id');
            window.location.href = `/reviews/${orderId}`;
        });
    });
});

// Función para cargar el estado de las reseñas
async function loadReviewStatus() {
    try {
        const response = await fetch('/reviews/available');
        const data = await response.json();
        
        if (data.success) {
            data.reviews.forEach(review => {
                const btn = document.querySelector(`[data-order-id="${review.pedido_id}"]`);
                if (btn) {
                    if (review.resena_dejada) {
                        btn.disabled = true;
                        btn.title = 'Reseña ya completada';
                        btn.innerHTML = '<i class="fas fa-check"></i>';
                        btn.className = 'btn btn-sm btn-success ms-1';
                    } else if (review.expirada) {
                        btn.disabled = true;
                        btn.title = 'Tiempo para reseña expirado';
                        btn.innerHTML = '<i class="fas fa-clock"></i>';
                        btn.className = 'btn btn-sm btn-secondary ms-1';
                    } else {
                        btn.title = 'Dejar reseña (disponible por 24h)';
                    }
                }
            });
        }
    } catch (error) {
        console.error('Error cargando estado de reseñas:', error);
    }
}

// Función para construir la URL de paginación manteniendo los filtros
function getPageUrl(page) {
    const form = document.getElementById('filterForm');
    const formData = new FormData(form);
    const params = new URLSearchParams(formData);
    params.set('page', page);
    return `/orders/history?${params.toString()}`;
}
// Exponer la función a EJS
window.getPageUrl = getPageUrl;

function clearFilters() {
    document.getElementById('status').value = '';
    document.getElementById('date').value = '';
    document.getElementById('search').value = '';
    window.location.href = '/orders/history';
}
</script>

<style>

.table-mis-pedidos td {
  padding-left: 0.4rem;
  padding-right: 0.4rem;
  font-size: 0.95em;
  white-space: nowrap;
  /* max-width: 120px; */
  overflow: hidden;
  text-overflow: ellipsis;
}

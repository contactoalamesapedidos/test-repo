<%- include('./partials/sidebar') %>

<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <%- include('./partials/navbar') %>
    <!-- End Navbar -->
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                            <div class="d-flex justify-content-between align-items-center px-3">
                                <h6 class="text-dark text-capitalize mb-0">Detalles del Repartidor</h6>
                                <a href="/dashboard/drivers" class="btn btn-sm btn-outline-primary mb-0">
                                    <i class="fas fa-arrow-left me-1"></i>Volver
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body px-4 pb-2">
                        <!-- Información del Repartidor -->
                        <div class="row mb-4">
                            <div class="col-md-4 mb-3">
                                <div class="card bg-gradient-primary text-white">
                                    <div class="card-body p-3 text-center">
                                        <div class="bg-white text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                            <i class="fas fa-user fa-2x"></i>
                                        </div>
                                        <h5 class="mb-1"><%= driver.nombre %> <%= driver.apellido %></h5>
                                        <p class="text-sm mb-2">ID: <%= driver.id %></p>
                                        <span class="badge badge-sm bg-white text-primary">
                                            <%= driver.status === 'available' ? 'Disponible' : (driver.status === 'on_delivery' ? 'En Reparto' : 'Desconectado') %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <div class="card-body p-3">
                                        <h6 class="text-muted mb-3">Información de Contacto</h6>
                                        <p class="mb-2"><i class="fas fa-envelope me-2 text-primary"></i><%= driver.email %></p>
                                        <p class="mb-2"><i class="fas fa-phone me-2 text-primary"></i><%= driver.telefono || 'No especificado' %></p>
                                        <p class="mb-0"><i class="fas fa-<%= driver.vehicle_type === 'Moto' ? 'motorcycle' : 'car' %> me-2 text-primary"></i><%= driver.vehicle_type %></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <div class="card-body p-3">
                                        <h6 class="text-muted mb-3">Estadísticas</h6>
                                        <div class="row text-center">
                                            <div class="col-6">
                                                <h4 class="text-primary mb-1"><%= stats.total_orders %></h4>
                                                <small class="text-muted">Pedidos Totales</small>
                                            </div>
                                            <div class="col-6">
                                                <h4 class="text-success mb-1"><%= stats.completed_orders %></h4>
                                                <small class="text-muted">Completados</small>
                                            </div>
                                        </div>
                                        <% if (stats.avg_rating && stats.total_ratings > 0) { %>
                                        <div class="mt-3 text-center">
                                            <div class="d-flex align-items-center justify-content-center">
                                                <% for (let i = 1; i <= 5; i++) { %>
                                                    <i class="fas fa-star <%= i <= Math.round(stats.avg_rating) ? 'text-warning' : 'text-muted' %>"></i>
                                                <% } %>
                                                <span class="ms-2 text-sm">(<%= stats.avg_rating.toFixed(1) %>)</span>
                                            </div>
                                            <small class="text-muted"><%= stats.total_ratings %> calificaciones</small>
                                        </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Pedidos Recientes -->
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header pb-0">
                                        <h6>Pedidos Recientes</h6>
                                    </div>
                                    <div class="card-body px-0 pb-2">
                                        <% if (recentOrders && recentOrders.length > 0) { %>
                                        <div class="table-responsive">
                                            <table class="table align-items-center mb-0">
                                                <thead>
                                                    <tr>
                                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Pedido</th>
                                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Cliente</th>
                                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Estado</th>
                                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Fecha</th>
                                                        <th class="text-secondary opacity-7">Total</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% recentOrders.forEach(order => { %>
                                                    <tr>
                                                        <td>
                                                            <span class="text-xs font-weight-bold">#<%= order.numero_pedido %></span>
                                                        </td>
                                                        <td>
                                                            <div class="d-flex px-2 py-1">
                                                                <div class="d-flex flex-column justify-content-center">
                                                                    <h6 class="mb-0 text-sm"><%= order.cliente_nombre %> <%= order.cliente_apellido %></h6>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <span class="badge badge-sm bg-gradient-<%= order.estado === 'entregado' ? 'success' : (order.estado === 'en_camino' ? 'warning' : 'secondary') %>">
                                                                <%= order.estado === 'entregado' ? 'Entregado' : (order.estado === 'en_camino' ? 'En Camino' : order.estado) %>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <span class="text-xs text-secondary"><%= new Date(order.fecha_pedido).toLocaleDateString('es-ES') %></span>
                                                        </td>
                                                        <td>
                                                            <span class="text-xs font-weight-bold">$<%= order.total %></span>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                        <% } else { %>
                                        <div class="text-center py-4">
                                            <i class="fas fa-shopping-cart fa-3x text-secondary mb-3"></i>
                                            <h6 class="text-muted">No hay pedidos recientes</h6>
                                            <p class="text-sm text-muted mb-0">Este repartidor aún no ha realizado entregas</p>
                                        </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('./partials/footer') %>
    </div>
</main>

<%- include('../partials/footer') %>
<script src="/js/dashboard/dashboard-drivers.js"></script>
<%- include('partials/restaurant-mobile-nav', { activePage: 'drivers' }) %>

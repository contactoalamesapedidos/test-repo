<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-light">
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-store me-2"></i>Panel de Restaurante
            </a>
            
            <div class="d-flex align-items-center">
                <span class="text-white me-3">
                    <i class="fas fa-user-circle me-1"></i>
                    <%= restaurant.nombre %>
                </span>
                
                <div class="dropdown">
                    <button class="btn btn-outline-light btn-sm dropdown-toggle" type="button" 
                            data-bs-toggle="dropdown">
                        Opciones
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/">
                            <i class="fas fa-home me-2"></i>Ver Sitio
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form action="/auth/logout" method="POST" class="d-inline">
                                <button class="dropdown-item text-danger" type="submit">
                                    <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-white sidebar border-end">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/dashboard">
                                <i class="fas fa-chart-bar me-2"></i>Resumen
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard/orders">
                                <i class="fas fa-shopping-cart me-2"></i>Pedidos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard/products">
                                <i class="fas fa-hamburger me-2"></i>Productos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard/settings">
                                <i class="fas fa-cog me-2"></i>Configuración
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="pt-3">
                    <!-- Restaurant header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h1 class="h2"><%= restaurant.nombre %></h1>
                            <p class="text-muted mb-0">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                <%= restaurant.direccion %>
                            </p>
                        </div>
                        
                        <div class="text-end">
                            <% if (restaurant.verificado) { %>
                                <span class="badge bg-success fs-6">
                                    <i class="fas fa-check-circle me-1"></i>Verificado
                                </span>
                            <% } else { %>
                                <span class="badge bg-warning fs-6">
                                    <i class="fas fa-clock me-1"></i>Pendiente
                                </span>
                            <% } %>
                        </div>
                    </div>

                    <!-- Stats cards -->
                    <div class="row mb-4">
                        <div class="col-md-3 mb-3">
                            <div class="card text-center h-100">
                                <div class="card-body">
                                    <i class="fas fa-shopping-cart text-primary fs-1 mb-2"></i>
                                    <h3 class="card-title"><%= stats.pedidos_hoy %></h3>
                                    <p class="card-text text-muted">Pedidos Hoy</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-3 mb-3">
                            <div class="card text-center h-100">
                                <div class="card-body">
                                    <i class="fas fa-dollar-sign text-success fs-1 mb-2"></i>
                                    <h3 class="card-title">$<%= parseFloat(stats.ventas_hoy).toFixed(2) %></h3>
                                    <p class="card-text text-muted">Ventas Hoy</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-3 mb-3">
                            <div class="card text-center h-100">
                                <div class="card-body">
                                    <i class="fas fa-hamburger text-warning fs-1 mb-2"></i>
                                    <h3 class="card-title"><%= stats.total_productos %></h3>
                                    <p class="card-text text-muted">Productos Activos</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-3 mb-3">
                            <div class="card text-center h-100">
                                <div class="card-body">
                                    <i class="fas fa-chart-line text-info fs-1 mb-2"></i>
                                    <h3 class="card-title">$<%= parseFloat(stats.promedio_pedido).toFixed(2) %></h3>
                                    <p class="card-text text-muted">Promedio por Pedido</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recent orders -->
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-clock me-2"></i>Pedidos Recientes
                            </h5>
                            <a href="/dashboard/orders" class="btn btn-sm btn-outline-primary">
                                Ver Todos
                            </a>
                        </div>
                        <div class="card-body">
                            <% if (recentOrders.length === 0) { %>
                                <div class="text-center py-4">
                                    <i class="fas fa-shopping-cart text-muted fs-1 mb-3"></i>
                                    <p class="text-muted">No hay pedidos recientes</p>
                                </div>
                            <% } else { %>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Pedido</th>
                                                <th>Cliente</th>
                                                <th>Total</th>
                                                <th>Estado</th>
                                                <th>Fecha</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% recentOrders.forEach(order => { %>
                                                <tr>
                                                    <td>
                                                        <strong>#<%= order.numero_pedido %></strong>
                                                    </td>
                                                    <td>
                                                        <%= order.cliente_nombre %> <%= order.cliente_apellido %>
                                                    </td>
                                                    <td>
                                                        <strong>$<%= parseFloat(order.total).toFixed(2) %></strong>
                                                    </td>
                                                    <td>
                                                        <span class="badge status-<%= order.estado %>">
                                                            <%= order.estado.charAt(0).toUpperCase() + order.estado.slice(1) %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <%= new Date(order.fecha_pedido).toLocaleString('es-AR') %>
                                                    </td>
                                                    <td>
                                                        <a href="/dashboard/orders" class="btn btn-sm btn-outline-primary">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Quick actions -->
                    <div class="row mt-4">
                        <div class="col-md-6 mb-3">
                            <div class="card">
                                <div class="card-body text-center">
                                    <i class="fas fa-plus-circle text-primary fs-1 mb-3"></i>
                                    <h5>Agregar Producto</h5>
                                    <p class="text-muted">Añade nuevos productos a tu menú</p>
                                    <a href="/dashboard/products" class="btn btn-primary">
                                        Gestionar Productos
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="card">
                                <div class="card-body text-center">
                                    <i class="fas fa-cog text-secondary fs-1 mb-3"></i>
                                    <h5>Configuración</h5>
                                    <p class="text-muted">Actualiza información del restaurante</p>
                                    <a href="/dashboard/settings" class="btn btn-secondary">
                                        Configurar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.2/socket.io.js"></script>
    <script src="/js/app.js"></script>
    
    <% if (typeof scripts !== 'undefined') { %>
        <% scripts.forEach(script => { %>
            <script src="<%= script %>"></script>
        <% }); %>
    <% } %>

    <!-- Pass user data to frontend -->
    <script data-user='<%= JSON.stringify(user || {}) %>'></script>
</body>
</html>

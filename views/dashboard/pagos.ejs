                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Período</th>
                                        <th>Ventas Brutas</th>
                                        <th>Comisión (10%)</th>
                                        <th>Estado</th>
                                        <th>Vencimiento</th>
                                        <th>Comprobantes</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>

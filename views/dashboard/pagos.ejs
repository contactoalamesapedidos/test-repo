                                            <td>
                                                <div class="small">
                                                    <strong>Desde:</strong> <%= new Date(cobro.semana_inicio).toLocaleDateString('es-AR') %><br>
                                                    <strong>Hasta:</strong> <%= new Date(cobro.semana_fin).toLocaleDateString('es-AR') %>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="text-end">
                                                    <strong class="text-primary">$<%= cobro.ventas_brutas.toLocaleString() %></strong>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="text-end">
                                                    <strong class="text-danger">$<%= cobro.monto_comision.toLocaleString() %></strong>
                                                    <br><small class="text-muted"><%= cobro.porcentaje_comision %>%</small>
                                                </div>
                                            </td>
                                            <td>
                                                <% if (cobro.estado === 'pendiente') { %>
                                                    <span class="badge bg-warning">Pendiente</span>
                                                    <% if (new Date(cobro.fecha_vencimiento) < new Date()) { %>
                                                        <br><span class="badge bg-danger mt-1">Vencido</span>
                                                    <% } %>
                                                <% } else if (cobro.estado === 'pagado') { %>
                                                    <span class="badge bg-success">Pagado</span>
                                                    <% if (cobro.fecha_pago) { %>
                                                        <br><small class="text-muted">
                                                            <%= new Date(cobro.fecha_pago).toLocaleDateString('es-AR') %>
                                                        </small>
                                                    <% } %>
                                                <% } else if (cobro.estado === 'vencido') { %>
                                                    <span class="badge bg-danger">Vencido</span>
                                                <% } else if (cobro.estado === 'exonerado') { %>
                                                    <span class="badge bg-secondary">Exonerado</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <div class="small">
                                                    <%= new Date(cobro.fecha_vencimiento).toLocaleDateString('es-AR') %>
                                                    <% const diasRestantes = Math.ceil((new Date(cobro.fecha_vencimiento) - new Date()) / (1000 * 60 * 60 * 24)); %>
                                                    <% if (diasRestantes > 0 && cobro.estado === 'pendiente') { %>
                                                        <br><small class="text-info">
                                                            <i class="fas fa-clock"></i> <%= diasRestantes %> día<%= diasRestantes > 1 ? 's' : '' %> restante<%= diasRestantes > 1 ? 's' : '' %>
                                                        </small>
                                                    <% } else if (diasRestantes <= 0 && cobro.estado === 'pendiente') { %>
                                                        <br><small class="text-danger">
                                                            <i class="fas fa-exclamation-triangle"></i> Vencido
                                                        </small>
                                                    <% } %>
                                                </div>
                                            </td>
                                            <td>
                                                <% if (cobro.comprobantes_count > 0) { %>
                                                    <span class="badge bg-info">
                                                        <%= cobro.comprobantes_count %> subido<%= cobro.comprobantes_count > 1 ? 's' : '' %>
                                                    </span>
                                                    <% if (cobro.monto_pagado_aprobado > 0) { %>
                                                        <br><small class="text-success">
                                                            $<%= cobro.monto_pagado_aprobado.toLocaleString() %> aprobado
                                                        </small>
                                                    <% } %>
                                                <% } else { %>
                                                    <span class="badge bg-light text-dark">Sin comprobantes</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <div class="btn-group">

                                                    <% if (cobro.estado === 'pendiente') { %>
                                                        <% if (mpConfigured) { %>
                                                            <button class="btn btn-sm btn-primary pagar-mp-btn" data-cobro-id="<%= cobro.id %>" data-amount="<%= cobro.monto_comision %>">
                                                                <i class="fas fa-credit-card"></i> Pagar (MP)
                                                            </button>
                                                        <% } else { %>
                                                            <button class="btn btn-sm btn-primary pagar-mp-btn" data-cobro-id="<%= cobro.id %>" data-amount="<%= cobro.monto_comision %>">
                                                                <i class="fas fa-external-link-alt"></i> Pagar Online
                                                            </button>
                                                        <% } %>
                                                        <button class="btn btn-sm btn-success" onclick="window.location.href='/dashboard/cobros/<%= cobro.id %>/upload'">
                                                            <i class="fas fa-upload"></i> Subir Comprobante
                                                        </button>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Vista de tarjetas para móviles -->
                        <div class="cobros-cards-list p-3">
                            <% cobros.forEach(cobro => { %>
                                <% const diasRestantes = Math.ceil((new Date(cobro.fecha_vencimiento) - new Date()) / (1000 * 60 * 60 * 24)); %>
                                <div class="cobro-card-mobile <%= cobro.estado %>">
                                    <div class="cobro-header">
                                        <div class="cobro-periodo">
                                            <%= new Date(cobro.semana_inicio).toLocaleDateString('es-AR') %> - <%= new Date(cobro.semana_fin).toLocaleDateString('es-AR') %>
                                        </div>
                                        <div class="cobro-estado">
                                            <% if (cobro.estado === 'pendiente') { %>
                                                <span class="badge bg-warning">Pendiente</span>
                                                <% if (new Date(cobro.fecha_vencimiento) < new Date()) { %>
                                                    <span class="badge bg-danger">Vencido</span>
                                                <% } %>
                                            <% } else if (cobro.estado === 'pagado') { %>
                                                <span class="badge bg-success">Pagado</span>
                                            <% } else if (cobro.estado === 'vencido') { %>
                                                <span class="badge bg-danger">Vencido</span>
                                            <% } else if (cobro.estado === 'exonerado') { %>
                                                <span class="badge bg-secondary">Exonerado</span>
                                            <% } %>
                                        </div>
                                    </div>
                                    
                                    <div class="cobro-body">
                                        <div class="cobro-info-row">
                                            <div class="cobro-label">Ventas Brutas:</div>
                                            <div class="cobro-value ventas">$<%= cobro.ventas_brutas.toLocaleString() %></div>
                                        </div>
                                        
                                        <div class="cobro-info-row">
                                            <div class="cobro-label">Comisión (<%= cobro.porcentaje_comision %>%):</div>
                                            <div class="cobro-value comision">$<%= cobro.monto_comision.toLocaleString() %></div>
                                        </div>
                                        
                                        <div class="cobro-info-row">
                                            <div class="cobro-label">Vencimiento:</div>
                                            <div class="cobro-value">
                                                <%= new Date(cobro.fecha_vencimiento).toLocaleDateString('es-AR') %>
                                                <% if (diasRestantes > 0 && cobro.estado === 'pendiente') { %>
                                                    <small class="text-info d-block">
                                                        <i class="fas fa-clock"></i> <%= diasRestantes %> día<%= diasRestantes > 1 ? 's' : '' %> restante<%= diasRestantes > 1 ? 's' : '' %>
                                                    </small>
                                                <% } else if (diasRestantes <= 0 && cobro.estado === 'pendiente') { %>
                                                    <small class="text-danger d-block">
                                                        <i class="fas fa-exclamation-triangle"></i> Vencido
                                                    </small>
                                                <% } %>
                                            </div>
                                        </div>
                                        
                                        <div class="cobro-info-row">
                                            <div class="cobro-label">Comprobantes:</div>
                                            <div class="cobro-value">
                                                <% if (cobro.comprobantes_count > 0) { %>
                                                    <span class="badge bg-info">
                                                        <%= cobro.comprobantes_count %> subido<%= cobro.comprobantes_count > 1 ? 's' : '' %>
                                                    </span>
                                                    <% if (cobro.monto_pagado_aprobado > 0) { %>
                                                        <small class="text-success d-block">
                                                            $<%= cobro.monto_pagado_aprobado.toLocaleString() %> aprobado
                                                        </small>
                                                    <% } %>
                                                <% } else { %>
                                                    <span class="badge bg-light text-dark">Sin comprobantes</span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <% if (cobro.estado === 'pendiente') { %>
                                        <div class="cobro-footer">
                                            <div class="cobro-actions">
                                                <% if (mpConfigured) { %>
                                                    <button class="btn btn-sm btn-primary pagar-mp-btn" data-cobro-id="<%= cobro.id %>" data-amount="<%= cobro.monto_comision %>">
                                                        <i class="fas fa-credit-card"></i> Pagar (MP)
                                                    </button>
                                                <% } else { %>
                                                    <button class="btn btn-sm btn-primary pagar-mp-btn" data-cobro-id="<%= cobro.id %>" data-amount="<%= cobro.monto_comision %>">
                                                        <i class="fas fa-external-link-alt"></i> Pagar Online
                                                    </button>
                                                <% } %>
                                                <button class="btn btn-sm btn-success" onclick="window.location.href='/dashboard/cobros/<%= cobro.id %>/upload'">
                                                    <i class="fas fa-upload"></i> Subir Comprobante
                                                </button>
                                            </div>
                                        </div>
                                    <% } %>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-money-bill-wave text-muted fs-1 mb-3"></i>
                            <p class="text-muted">No hay pagos registrados</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.2/socket.io.js"></script>
<!-- app.js ya se carga en layout.ejs -->

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Asegurar que el dropdown de usuario funcione
    const userDropdown = document.getElementById('userDropdown');
    if (userDropdown && typeof bootstrap !== 'undefined') {
        new bootstrap.Dropdown(userDropdown);
    }

    // Manejar el clic del botón Pagar (MP)
    document.querySelectorAll('.pagar-mp-btn').forEach(button => {
        button.addEventListener('click', async function() {
            const cobroId = this.dataset.cobroId;
            const amount = this.dataset.amount;
            const originalButtonText = this.innerHTML;
            this.disabled = true;
            this.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Procesando...';

            try {
                const response = await fetch(`/dashboard/payments/mercadopago/create?cobro_id=${cobroId}&amount=${amount}`);
                const data = await response.json();

                if (data.success) {
                    if (data.redirect && data.redirectUrl) {
                        // Redirigir al link configurado en admin
                        window.location.href = data.redirectUrl;
                    } else if (data.preferenceId) {
                        // Redirigir al usuario a la URL de pago de Mercado Pago
                        const mercadopagoCheckoutUrl = `https://www.mercadopago.com.ar/checkout/v1/redirect?pref_id=${data.preferenceId}`;
                        window.location.href = mercadopagoCheckoutUrl;
                    } else {
                        showNotification('Error: No se pudo generar el link de pago', 'error');
                    }
                } else {
                    showNotification(data.message || 'Error al generar el link de pago de Mercado Pago', 'error');
                }
            } catch (error) {
                console.error('Error al procesar pago con Mercado Pago:', error);
                showNotification('Error de red o servidor al intentar pagar con Mercado Pago', 'error');
            } finally {
                this.disabled = false;
                this.innerHTML = originalButtonText;
            }
        });
    });
});

// Función para subir comprobante
function subirComprobante(cobroId) {
    // Redirigir a la ruta recomendada para subir comprobante
    window.location.href = `/dashboard/pagos/${cobroId}/comprobante`;
}

// Mejorar mensaje de éxito tras la carga
function showNotification(message, type = 'info') {
    const toast = document.createElement('div');
    toast.className = `toast align-items-center text-white bg-${type} border-0 position-fixed bottom-0 end-0 m-3`;
    toast.setAttribute('role', 'alert');
    toast.setAttribute('aria-live', 'assertive');
    toast.setAttribute('aria-atomic', 'true');
    toast.innerHTML = `
        <div class="d-flex">
            <div class="toast-body">
                <i class='fas fa-check-circle me-2'></i> ${message}
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    `;
    document.body.appendChild(toast);
    const bsToast = new bootstrap.Toast(toast);
    bsToast.show();
    toast.addEventListener('hidden.bs.toast', () => {
        document.body.removeChild(toast);
    });
}
</script>

